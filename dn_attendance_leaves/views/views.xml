<odoo>
  <data>

     <record id="view_allocate_number_leaves" model="ir.ui.view">
        <field name="name">hr.allocate_leaves.form</field>
        <field name="model">hr.allocate_holiday</field>
        <field name="arch" type="xml">
            <form string="Bulk Allocate">
                <div class="container">
                    <div class="row">
                        <header>
                            <button name="allocate_leaves" string="Generate Leave Entries"
                                    groups="leave_management_custom.group_leave_custom_admin,leave_management_custom.group_leave_custom_super_user"
                                    help="Generate leave entries for selected employees"
                                    type="object" class="oe_highlight" attrs="{'invisible' : [('state', '=', 'done')] }" />
                              <button name="remove_allocation" string="Remove Allocation Entries"
                                    groups="leave_management_custom.group_leave_custom_admin,leave_management_custom.group_leave_custom_super_user"
                                    help="Remove the leave entries from selected employees"
                                    type="object" attrs="{'invisible' : [('state', '=', 'draft')] }"/>
                            <field name="state" widget="statusbar"/>
                        </header>
                    </div>
                </div>

                <sheet>
                    <group col="4">
                        <field name="number_of_days"  />
                        <!--<field name="name" attrs="{'readonly' : [('state', '=', 'done')] }"/>-->
                        <field name="holiday_status_id" options="{'no_create_edit': True}"/>
                    </group>

                    <group>
                        <field name="employee_ids" widget="many2many_tags"   attrs="{'readonly' : [('state', '=', 'done')] }" options="{'no_create_edit': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_allocate_leaves_tree" model="ir.ui.view">
        <field name="name">hr.public_holiday.tree</field>
        <field name="model">hr.allocate_holiday</field>
        <field name="arch" type="xml">
            <tree string="Allocate Leaves" >
                <!--<field name="name" />-->

                <field name="employee_ids" widget="many2many_tags" />
                <field name="state"/>
                <field name="create_date"/>
                <field name = "create_uid"/>
            </tree>
        </field>
    </record>

    <record id="allocate_bulk_leaves_action" model="ir.actions.act_window">
        <field name="name">Allocate Leaves</field>
        <field name="res_model">hr.allocate_holiday</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>


  </data>
</odoo>