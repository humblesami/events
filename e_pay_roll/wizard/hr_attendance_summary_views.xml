	<record id="attendance_report_view" model="ir.ui.view">
        <field name="name">Attendance Report</field>
        <field name="model">hrattendance.wizard</field>
        <field name="arch" type="xml">
        	<form>
        		<group>
        			<field name="employee_id" />
        		</group>
        		<group col="4">
        			<field name="date_from" />
        			<field name="date_to" />
        		</group>
        		<footer>
	                <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
	                or
	                <button string="Cancel" class="oe_link" special="cancel" />
	            </footer>
			</form>
        </field>
    </record>

	<record id="action_attendanceperson_wizard" model="ir.actions.act_window">
        <field name="name">Generate Attendance Report</field>
        <field name="res_model">hrattendance.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="attendance_report_view"/>
        <field name="target">new</field>
    </record>

