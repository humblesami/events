<odoo>
    <data>
    <record id="ir_access_view_tree_custom" model="ir.ui.view">
            <field name="model">ir.model.access</field>
            <field name="arch" type="xml">
                <tree string="Access Controls" editable="top">
                    <field name="name"/>
                    <field name="model_id" options="{'no_create': True}"/>
                    <field name="group_id" options="{'no_create': True}" domain="['|',('category_id.name','=','E-payroll'),('category_id.name','=','E-Leave')]"/>
                    <field name="perm_read"/>
                    <field name="perm_write"/>
                    <field name="perm_create"/>
                    <field name="perm_unlink"/>
                </tree>
            </field>
        </record>

        <record id="ir_access_act_custom" model="ir.actions.act_window">
            <field name="name">Access Controls List</field>
            <field name="res_model">ir.model.access</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="ir_access_view_tree_custom"/>
            <field name="search_view_id" ref="base.ir_access_view_search"/>
        </record>
        <menuitem
                name="Admin Access Control"
                id="acess_control_custom"
                action="ir_access_act_custom"
                groups="e_pay_roll.custom_group_e_payroll_admin_e"
                parent="menu_root" sequence="13"
        />
    </data>
</odoo>