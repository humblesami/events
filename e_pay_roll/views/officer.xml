<odoo>
    <data>


        <record id="custom_e_payroll_officer_action" model="ir.actions.act_window">
            <field name="name">Manager</field>
            <!--<field name="type">ir.actions.act_window</field>-->
            <field name="res_model">e_payroll.users</field>
            <field name="view_mode">kanban,tree,form</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_id" ref="e_payroll_user_kanban"/>
            <field name="domain">[('groups_id.category_id.name','=','E-Payroll'),('groups_id.name','=','Officer')]</field>
            <field name="context">{'dn_users_menu':True,'mp_officer_menu':True, 'user_type':'officer'}</field>
            </record>



          <record id="action_epayroll_tree_officer" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="custom_e_payroll_officer_action"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="e_payroll_user_kanban"/>
        </record>

           <record id="action_epayroll_form_officer" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="custom_e_payroll_officer_action"/>
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="e_payroll_users_settings_form"/>
        </record>
    </data>
</odoo>