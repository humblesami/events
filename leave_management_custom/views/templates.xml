<odoo>
    <data>
 <record id="refusal_email" model="mail.template">
          <field name="name">Refuse template</field>
          <field name="email_from">${object.department_id.env.user.email}</field>
          <field name="subject">Leave Rejected</field>
          <field name="email_to">${object.employee_id.work_email}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="leave_management_custom.model_hr_holidays"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear ${object.employee_id.display_name},<br/><br/>
	      Your Leave request Rejected<br/></p>
              Regards,<br/>
              ${object.department_id.env.user.name}


	    ]]>
	  </field>
       </record>
        
        
        
        <record id="approval_email" model="mail.template">
          <field name="name">Approve template</field>
          <field name="email_from">${object.department_id.env.user.email}</field>
          <field name="subject">Leave Approved</field>
          <field name="email_to">${object.employee_id.work_email}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="leave_management_custom.model_hr_holidays"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear ${object.employee_id.display_name},<br/><br/>
	      Your Leave request Approved<br/></p>
              Regards,<br/>
              ${object.department_id.env.user.name}

	    ]]>
	  </field>
        </record>


        <!--Approval of cancelation requestion-->
        <record id="approve_cancellation_request" model="mail.template">
          <field name="name">Approval of Cancellation Leave </field>
          <field name="email_from">${object.env.user.email}</field>
          <field name="subject">Cancellation Request Approved</field>
          <field name="email_to">${object.employee_id.work_email}</field>
          <field name="lang">${object.lang}</field>
            <field name="model">hr.holidays.cancel</field>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear ${object.employee_id.display_name},<br/><br/>
	      Your Leave Cancellation request Approved<br/></p>
              Regards,<br/>
              ${object.env.user.name}


	    ]]>
	  </field>
       </record>

         <!--refusal of cancelation requestion-->
        <record id="refuse_cancellation_request" model="mail.template">
          <field name="name">Refusal of Cancellation Leave </field>
          <field name="email_from">${object.env.user.email}</field>
          <field name="subject">Cancellation Request Refused</field>
          <field name="email_to">${object.employee_id.work_email}</field>
          <field name="lang">${object.lang}</field>
          <field name="model">hr.holidays.cancel</field>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear ${object.employee_id.display_name},<br/><br/>
	      Your Leave Cancellation request Rejected<br/></p>
              Regards,<br/>
              ${object.env.user.name}


	    ]]>
	  </field>
       </record>
    </data>
</odoo>