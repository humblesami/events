<odoo>
    <data>

        <!-- res.users -->

        <record id="custom_leave_other_user_form" model="ir.ui.view">
            <field name="name">custom.leave.other.user.form</field>
            <field name="model">custom_leave_management.other_users</field>
            <field name="arch" type="xml">
               <form string="Employee" create="false" write="false">
                    <sheet>
                        <field name="id" invisible="1"/>
                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image":"image_medium"}'/>
                     <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h2>
                                <field name="name" required="1"/>
                            </h2>
                            <separator></separator>
                            <h2>
                                <field name="nick_name" placeholder="Nick Name"/>
                            </h2>
                            <label for="login" class="oe_edit_only" string="Email Address"/>
                            <h2>
                                <field name="login"/>
                            </h2>
                        </div>
                        <notebook>
                            <page name="public" string="Public Information">
                                <group>
                                    <group string="Contact Information">
                                    <field widget="mask" data-inputmask-mask="999-999-9999"
                                           data-inputmask-clearincomplete="True"
                                           data-inputmask-placeholder="XXX-XXX-XXXX"
                                           name="work_phone" string="Work Phone"/>
                                    <field widget="mask" data-inputmask-mask="999-999-9999"
                                           data-inputmask-clearincomplete="True"
                                           data-inputmask-placeholder="XXX-XXX-XXXX"
                                           name="mobile_phone" string="Cell Phone"/>
                                    <field name="fax"/>
                                    <field name="website" widget="url" placeholder="e.g. www.yourweb.com"/>
                                    </group>
                                    <group string="Position">
                                        <field name="department_id"/>
                                        <field name="job_id" placeholder="e.g. Sales Director" string="Job Title"/>
                                    </group>
                                </group>
                            </page>
                            <page name="personal_information" string="Personal Information" groups="hr.group_hr_user">
                                <group>
                                    <group string="Citizenship &amp; Other Information">
                                        <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                                        <field name="identification_id" groups="hr.group_hr_user"/>
                                        <field name="passport_id" groups="hr.group_hr_user"/>
                                    </group>
                                    <group string="Status">
                                        <field name="gender"/>
                                        <!--<field name="marital"/>-->
                                    </group>
                                    <group string="Birth">
                                        <field name="birthday"/>
                                    </group>
                                </group>
                            </page>
                            <page name="hr_settings" string="HR Settings" groups="hr.group_hr_user">
                                <group>
                                    <group string='Status' name="active_group">
                                         <field name="groups_id" widget="many2many_checkboxes"
                                               domain="[('category_id.name','=','E-Leave')]"
                                               required="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


                <record id="custom_leave_other_user_kanban" model="ir.ui.view">
            <field name="name">custom.leave.other.user.kanban</field>
            <field name="model">custom_leave_management.other_users</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban">
                    <!--<field name="last_login"/>-->
                    <!--<field name="message_is_follower"/>-->
                    <!--<field name="message_follower_ids"/>-->
                    <!--<field name="message_ids"/>-->
                    <!--<field name="message_needacaddress_home_idtion_counter"/>-->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <!--<field name="category_ids"/>-->
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('meeting_point.other_users', 'image_medium', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li t-if="record.login.raw_value">
                                            <i class="fa fa-envelope"></i>
                                            <field name="login"/>
                                        </li>
                                        <li t-if="record.work_phone.raw_value">
                                            <i class="fa fa-phone"></i>
                                            <field name="work_phone"/>
                                        </li>
                                        <li t-if="record.mobile_phone.raw_value">
                                            <i class="fa fa-mobile"></i>
                                            <field name="mobile_phone"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>


        <record id="action_custom_leave_other_users" model="ir.actions.act_window">
            <field name="name">Other Users</field>
            <field name="res_model">custom_leave_management.other_users</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="custom_leave_other_user_kanban"/>
            <field name="domain">[('groups_id.category_id.name','=','E-Leave'),'|',('groups_id.name','=','Admin'),('groups_id.name','=','Staff')]</field>
            <field name="context">{}</field>

            <!--<field name="search_view_id" ref="view_calendar_event_search"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a user.
                </p>
                <!--<p>-->
                <!--The calendar is shared between employees and fully integrated with-->
                <!--other applications such as the employee holidays or the business-->
                <!--opportunities.-->
                <!--</p>-->
            </field>
        </record>
        <record id="action_leave_other_user_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_custom_leave_other_users"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="custom_leave_other_user_kanban"/>
        </record>
        <record id="action_leave_other_user_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_custom_leave_other_users"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="custom_leave_other_user_form"/>
        </record>


    </data>
</odoo>
