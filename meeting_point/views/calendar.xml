                    </templates>
                </kanban>
            </field>
        </record>


        <record id="meeting_point_event_form" model="ir.ui.view">
            <field name="name">meeting.point.form</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <form string="Meetings" class="meetingform">
                    <field name="is_active_yet" class="o_hidden"/>
                    <field name="attendee_status" class ="statusValue o_hidden"/>
                    <div class="acceptance_buttons_new oe_read_only"  style="display:flex"  attrs="{'invisible': ['|',('is_active_yet','=','no'),('exectime','=','completed')]}">
                        <div class ="accet"  style="display:none !important">
                            <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_accept" ><i class="fa fa-check fa-lg" style="color:white"/>Accept
                            </button>
                        </div>
                        <div class = "accept_visible" >
                            <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_accept">Accept
                            </button>
                        </div>

                        <div class ="declin "  style="display:none !important">
                            <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_decline"><i class="fa fa-check fa-lg" style="color:white"/>Decline
                            </button>
                        </div>
                        <div class = "decline_visible">
                            <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_decline">Decline
                            </button>
                        </div>

                        <div class ="tentativehide "  style="display:none !important">
                            <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_tentative"><i class="fa fa-check fa-lg" style="color:white"/>Tentative
                            </button>
                        </div>
                        <div class = "tentative_visible" >
                            <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_tentative">Tentative
                            </button>
                        </div>
                    </div>
                    <link rel="stylesheet" href="/meeting_point/static/css/meeting_form.css"/>
                    <field name="id" class="meeting_id o_hidden"/>
                    <sheet>
                        <div class="publish_btn oe_read_only" groups="meeting_point.group_meeting_admin">
                            <button type="object" class="btn btn-primary" name="non_publish" string="Unpublish Meeting" attrs="{'invisible': ['|',('publish','=',False),('exectime','!=','upcoming')]}"/>
                            <button type="object" class="btn btn-primary" name="action_publish" string="Publish Meeting" attrs="{'invisible': ['|',('publish','=',True),('exectime','!=','upcoming')]}"/>
                            <button type="object" class="btn btn-primary" name="action_archive" string="Move to Archive" attrs="{'invisible': [('exectime','!=','completed')]}"/>
                            <field name="archived" invisible="1"/>
                            <field name="publish" invisible="1"/>
                        </div>
                        <field name="state" invisible="1"/>
                        <field name="is_attendee" invisible="1"/>
                        <!--<field name="attendee_status" invisible="1"/>-->
                        <field name="conference_status" class="conference_status o_hidden"/>
                        <field name="exectime"/>
                        <div name="readonly_completed_1">
                            <group>
                                <field name="name" attrs="{'readonly': [('exectime', '=', 'completed')]}" string="Meeting Subject" placeholder="e.g. Business Lunch"/>
                                <field name="start_datetime" string="Start Date &amp; Time" attrs="{'readonly': ['|',('exectime', '=', 'completed'),'&amp;',('id', '!=', False), ('recurrency','=',True)]}"/>
                                <field name="stop_datetime" string="End Date &amp; Time" attrs="{'readonly': ['|',('exectime', '=', 'completed'),'&amp;',('id', '!=', False), ('recurrency','=',True)]}"/>
                                <field name="duration" attrs="{'readonly': [('exectime', '=', 'completed')]}" widget="float_time" required="1" class="meeting_duration dn_time_picker"/>
                                <field name="start" attrs="{'invisible': True}"/>
                                <field name="stop" attrs="{'invisible': True}"/>
                                <field name="categ_ids" widget="many2many_tags" options="{'no_create_edit': True}" attrs="{'invisible': True}"/>
                            </group>

                            <group class="emeeting">
                                <field  class="conference" name="conference_bridge_number"/>
                                <field  class="pin" name="pin"/>
                                <field  name="video_call_link" widget="url"/>
                            </group>

                            <group class= 'oe_read_only'>
                                <field name='location'/>
                            </group>

                            <group readonly="1" class = 'oe_edit_only'>
                                <label for="address"/>
                                <div class="o_address_format">
                                    <field name="address" placeholder="Street 1" attrs="{'readonly': [('exectime', '=', 'completed')]}" style="resize:none"/>
                                    <field name="street" attrs="{'readonly': [('exectime', '=', 'completed')]}" placeholder="Street 2"/>
                                    <span class='oe_read_only' attrs="{'invisible': [('address', '=', False),('street', '=', False)]}">, </span>
                                    <field name="zip" attrs="{'readonly': [('exectime', '=', 'completed')]}" class="zip masked_input" placeholder="Zip"/>
                                    <span class='oe_read_only' attrs="{'invisible': [('zip', '=', False)]}">, </span>
                                    <field name="city" attrs="{'readonly': [('exectime', '=', 'completed')]}" style="margin-right: 4px;" placeholder="City"/>
                                    <span class='oe_read_only' attrs="{'invisible': [('city', '=', False)]}"><br/></span>
                                    <field name="country_state" attrs="{'readonly': [('exectime', '=', 'completed')]}" style="margin-right: 4px;" domain="[('country_id','=',country)]" placeholder="State" options="{'no_create': True,'no_open ': True,'no_quick_create': True,                                        'no_create_edit' : True, 'no_open': True}"/>
                                    <span class='oe_read_only' attrs="{'invisible': [('country_state', '=', False)]}">, </span>
                                    <field name="country" required="1" attrs="{'readonly': [('exectime', '=', 'completed')]}" options="{'no_create': True,'no_open ': True,'no_quick_create': True,'no_create_edit' : True, 'no_open': True}"/>
                                </div>
                            </group>

                            <group>
                                <field name="description" attrs="{'readonly': [('exectime', '=', 'completed')]}" />
                            </group>

                            <div class="oe_edit_only attendees">
                                <label for="partner_ids" string="Attendees"/>
                                <h3>
                                    <field name="partner_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}"
                                           widget="many2manyattendee"
                                           options="{'no_quick_create': True, 'no_create_edit' : True}"
                                           placeholder="Select attendees..."
                                           context="{'force_email':True}" class="oe_inline">

                                    </field>
                                </h3>
                            </div>
                        </div>

                        <div name="mp_roster" class="o2m_kanban oe_read_only roster-item">
                            <h4>Roster</h4>
                            <button class="btn-defult roster-item roster-item"
                                    attrs="{'invisible': ['|','|',('publish','=',False),('exectime','=','past'),('exectime','=','completed')]}"
                                    name="action_sendmail" type="object"
                                    string="E-Mail Meeting Invite"
                                    icon="fa-envelope"
                                    groups="meeting_point.group_meeting_admin"
                            />
                            <div class="dnroster roster-item">
                               <field name="attendee_ids" mode="kanban">
                               </field>
                            </div>
                        </div>

                        <div name="readonly_completed_2">
                            <group groups="meeting_point.group_meeting_admin">
                                <field name="alarm_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" widget="many2many_tags"/>
                            </group>

                            <notebook invisible="1">
                                <page string="Options" attrs="{'invisible':True}">
                                    <group>
                                        <div>
                                            <group>
                                                <field name="recurrency" invisible="1" options="{'no_create': True,'no_open ': True,'no_quick_create': True, 'no_create_edit' : True}"/>
                                            </group>
                                            <div attrs="{'invisible': [('recurrency', '=', False)]}">
                                                <group>
                                                    <label for="interval"/>
                                                    <div class="o_row">
                                                        <field name="interval" attrs="{'required': [('recurrency', '=', True)]}"/>
                                                        <field name="rrule_type" attrs="{'required': [('recurrency', '=', True)]}"/>
                                                    </div>
                                                    <label string="Until" for="end_type"/>
                                                    <div class="o_row">
                                                        <field name="end_type" attrs="{'required': [('recurrency', '=', True)]}"/>
                                                        <field name="count" attrs="{'invisible': [('end_type', '!=', 'count')], 'required': [('recurrency', '=', True)]}"/>
                                                        <field name="final_date" attrs="{'invisible': [('end_type', '!=', 'end_date')], 'required': [('end_type', '=', 'end_date')]}"/>
                                                    </div>
                                                </group>
                                                <group attrs="{'invisible': [('rrule_type', '!=', 'weekly')]}" name="weekdays">
                                                    <field name="mo"/>
                                                    <field name="tu"/>
                                                    <field name="we"/>
                                                    <field name="th"/>
                                                    <field name="fr"/>
                                                    <field name="sa"/>
                                                    <field name="su"/>
                                                </group>
                                                <group attrs="{'invisible': [('rrule_type', '!=', 'monthly')]}">
                                                    <label string="Day of Month" for="month_by"/>
                                                    <div class="o_row">
                                                        <field name="month_by"/>
                                                        <field name="day" attrs="{'required': [('month_by', '=', 'date'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'date')]}"/>
                                                        <field name="byday" string="The" attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'day')]}"/>
                                                        <field name="week_list" nolabel="1" attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'day')]}"/>
                                                    </div>
                                                </group>
                                            </div>
                                        </div>
                                        <group>
                                            <field name="privacy" invisible="1"/>
                                            <field name="show_as" invisible="1"/>
                                            <field name="rrule" invisible="1" readonly="0"/>
                                            <field name="recurrent_id" invisible="1"/>
                                        </group>
                                    </group>
                                </page>
                                <page invisible="1" string="Misc" groups="base.group_no_one">
                                    <group>
                                        <label for="user_id" string="Owner"/>
                                        <field name="user_id" nolabel="1"/>
                                    </group>
                                </page>
                            </notebook>

                            <div class = "mtopic_tree oe_read_only">
                                <h3>Agenda Topics</h3>
                                <field name="topic_ids" mode="kanban" ></field>
                            </div>
                            <div class = "mtopic_tree oe_edit_only">
                                <h3>Agenda Topics</h3>
                                <field name="topic_ids_new" mode="tree" ></field>
                            </div>
                        </div>

                        <div class="o2m_kanban">
                            <h4>Meeting Documents</h4>
                            <field name="doc_ids" context="{'form_view_ref': 'meeting_point.view_meeting_doc_form','kanban_view_ref': 'dn_documents.dn_docs_kanban_annotator'}" class="kanban_document" mode="kanban"/>
                        </div>

                        <div class="oe_read_only" name="readonly_completed_3">
                            <div class="o2m_kanban">
                                <h4>Documents For Signatures</h4>
                                <field name="document_ids"
                                       attrs="{'readonly': [('exectime', '=', 'completed')]}"
                                       class="kanban_document"
                                       mode="kanban"
                                />
                            </div>
                        </div>

                        <div class="oe_read_only o2m_kanban">
                            <h4>Surveys</h4>
                            <field name="survey_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" string=" " mode="kanban">

                            </field>
                        </div>

                        <div class="oe_read_only o2m_kanban">
                            <h4>Approval/Voting</h4>
                            <field name="voting_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" string=" " mode="kanban">
                            </field>
                        </div>

                    </sheet>                    
                    <app-comments  attrs="{'invisible': [('publish','=',False)]}" ></app-comments>
                    <script src="/meeting_point/static/js/meeting_form.js"/>
                    <script type="text/javascript" src="/meeting_point/static/js/meeting_point.js"/>
                    <script type="text/javascript" src="/meeting_point/static/js/attendance.js"/>
                </form>
            </field>
        </record>

        <record id="meeting_point_event_form_archive" model="ir.ui.view">
            <field name="name">meeting.point.event.form.archive</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="meeting_point.meeting_point_event_form"/>
            <field name="mode">primary</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="edit">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="create">false</attribute>
                </xpath>
                 <xpath expr="//form" position="inside">
                    <style>
                      ul.survey_kanban li:nth-child(1){
                        display:none;
                      }
                      ul.survey_kanban li:nth-child(2){
                        display:none;
                      }
                    </style>
                </xpath>
            </field>
        </record>

        <record id="meeting_point_event_form_completed" model="ir.ui.view">
            <field name="name">meeting.point.event.form.completed</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="meeting_point.meeting_point_event_form"/>
            <field name="mode">primary</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="delete">false</attribute>
                </xpath>


                <xpath expr="//div[@name='mp_roster']" position="attributes">
                   <attribute name="class">o2m_kanban roster-item</attribute>
                </xpath>

                <xpath expr="//div[@name='readonly_completed_1']" position="attributes">
                   <attribute name="class">oe_read_only</attribute>
                </xpath>

                <xpath expr="//div[@name='readonly_completed_2']" position="attributes">
                   <attribute name="class">oe_read_only</attribute>
                </xpath>

                <xpath expr="//div[@name='readonly_completed_3']" position="attributes">
                   <attribute name="class">oe_read_only</attribute>
                </xpath>

                 <xpath expr="//button[@name='do_accept']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>
                  <xpath expr="//button[@name='do_decline']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>
                  <xpath expr="//button[@name='do_tentative']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='doc_ids']" position= "replace">
                       <div class="o2m_kanban">
                            <field name="doc_ids" context="{'form_view_ref': 'meeting_point.view_meeting_doc_form','kanban_view_ref': 'dn_documents.dn_docs_kanban_annotator'}" class="kanban_document" mode="kanban"/>
                        </div>
                       <!--<field name="doc_ids">-->
                             <!--<kanban quick_create="false" edit="false" delete="true">-->
