<odoo>
    <data>

        <record id="calendar.view_calendar_event_form_popup" model="ir.ui.view">
            <field name="name">calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <form string="Meetings">
                    <field name="res_model" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="is_attendee" invisible="1"/>
                    <field name="allday" invisible="1"/>
                    <field name="attendee_status" invisible="1"/>
                    <field name="conference_status" class="conference_status o_hidden"/>
                    <field name="id" class="o_hidden meeting_id"/>
                    <field name="im_attendee" class="o_hidden is_attendee"/>
                    <!--<a href="/web#view_type=form&amp;model=calendar.event&amp;action=meeting_point.action_upcoming_meeting"-->
                       <!--class="meeting_link btn btn-sm btn-primary">Details</a>-->
                    <group>
                        <field name="name" string="Meeting Subject" />
                        <field name="start" string="Starting at" />
                        <field name="stop" string="Ending at" />
                        <field name="duration" widget="float_time" class="oe_inline"/>
                        <field name="video_call_link" widget="url" class="oe_read_only"/>
                        <button type="object" class="btn-primary detail_btn oe_read_only"  name="start_conference" attrs="{'invisible': [('exectime', 'not in', ['upcoming','ongoing'])]}">Join</button>

                        <field name="conference_bridge_number" class="conference"/>
                        <field name="pin" class="pin" />
                        <field name="company" string="Location" class="oe_read_only"/>
                    </group>
                    <button type="object" class="btn-primary detail_btn o_hidden" name="go_to_meeting">Details</button>
                    <script src="/meeting_point/static/js/event_popup.js"></script>
                </form>
            </field>
        </record>


        <record id="meeting_point_kanban" model="ir.ui.view">
            <field name="name">meeting_point.kanban</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
            <kanban default_order="start_datetime">
                    <field name="start_datetime"/>
                    <field name="publish"/>
                    <field name="attendee_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette oe_kanban_global_click ">
                                <div class="oe_module_desc">
                                    <div class="seen_by_me">
                                        <field name="seen_by_me"/>
                                    </div>

                                    <div class="meeting_info">
                                        <div class="date_tam" style="">
                                            <div class="o_day" style="    font-size: 26px;">
                                                <t t-esc="record.start_datetime.raw_value.getDate()"/>
                                            </div>
                                            <div>
                                                <t t-esc="moment(record.start_datetime.raw_value).format('MMM')"/>
                                                <t t-esc="record.start_datetime.raw_value.getFullYear()"/>
                                            </div>
                                            <div>
                                                <t t-esc="moment(record.start_datetime.raw_value).format('LT')"/>
                                            </div>
                                        </div>
                                        <div class="details">
                                            <h2>
                                                <field name="name"/>
                                            </h2>
                                                 <div class="o_hidden pblic_evnt_id">
                                            <field name="id" class="o_hidden" />
                                            </div>
                                            <!--<field name="start_datetime"></field>-->
                                            <p class="oe_module_name">
                                                <p>
                                                    <field name="company" string="Location"/>
                                                </p>
                                                <p><field name="address" style="margin-right: 4px;"/>
                                                    <field name="street"/>
                                                </p>
                                                <p><field name="city" style="margin-right: 4px;"/>
                                                    <field name="country_state"/>
                                                    <field name="zip"/>
                                                </p>
                                            </p>

                                            <div class="current_status">
                                                <field name="attendee_status" invisible="1"/>
                                                <field name="publish" invisible="1"/>
                                            </div>
                                        </div>
                                    </div>

                                    <t t-if="record.publish.value">
                                        <div class="acceptancebuttons">
                                            <t t-if="record.attendee_status.value=='Accepted'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_accept"><i class="fa fa-check fa-lg" style="color:white"/>Accept
                                                </button>
                                            </t>
                                            <t t-if="record.attendee_status.value!='Accepted'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_accept">Accept
                                                </button>
                                            </t>

                                            <t t-if="record.attendee_status.value=='Declined'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_decline"><i class="fa fa-check fa-lg" style="color:white"/>Decline
                                                </button>
                                            </t>
                                            <t t-if="record.attendee_status.value!='Declined'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_decline">Decline
                                                </button>
                                            </t>

                                            <t t-if="record.attendee_status.value=='Uncertain'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_tentative"><i class="fa fa-check fa-lg" style="color:white"/>Tentative
                                                </button>
                                            </t>
                                            <t t-if="record.attendee_status.value!='Uncertain'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_tentative">Tentative
                                                </button>
                                            </t>
                                        </div>
                                    </t>
                                </div>
                                <script src="/meeting_point/static/js/meeting_kanban.js" />
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

         <record id="meeting_point_event_kanban_archive" model="ir.ui.view">
            <field name="name">meeting.point.event.kanban.archive</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="meeting_point.meeting_point_kanban"/>
            <field name="mode">primary</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban" position="attributes">
                    <attribute name="create">false</attribute>

                </xpath>
            </field>
        </record>

        <record id="meeting_point_event_form" model="ir.ui.view">
            <field name="name">meeting.point.form</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <form string="Meetings" class="meetingform">
                    <link rel="stylesheet" href="/meeting_point/static/css/meeting_form.css"/>
                    <field name="id" class="meeting_id o_hidden"/>
                    <field name="seen_by_me" class="meeting_seen o_hidden"/>
                    <sheet>
                        <div class="oe_button_box oe_right publish_btn oe_read_only" groups="meeting_point.group_meeting_admin">
                            <button type="object" class="btn btn-primary" name="non_publish" string="Unpublish" attrs="{'invisible': ['|',('publish','=',False),('exectime','!=','upcoming')]}"/>
                            <button type="object" class="btn btn-primary" name="action_publish" string="Publish" attrs="{'invisible': ['|',('publish','=',True),('exectime','!=','upcoming')]}"/>
                            <button type="object" class="btn btn-primary" name="action_archive" string="Move to Archive" attrs="{'invisible': [('exectime','!=','completed')]}"/>
                            <field name="archived" invisible="1"/>
                            <field name="publish" invisible="1"/>
                        </div>
                        <field name="state" invisible="1"/>
                        <field name="is_attendee" invisible="1"/>
                        <field name="attendee_status" invisible="1"/>
                        <field name="conference_status" class="conference_status o_hidden"/>
                        <field name="exectime"/>
                        <div name="readonly_completed_1">
                        <group>
                            <field name="name" attrs="{'readonly': [('exectime', '=', 'completed')]}" string="Meeting Subject" placeholder="e.g. Business Lunch"/>
                            <field name="start_datetime" string="Start Date &amp; Time" attrs="{'readonly': ['|',('exectime', '=', 'completed'),'&amp;',('id', '!=', False), ('recurrency','=',True)]}"/>
                            <field name="stop_datetime" string="End Date &amp; Time" attrs="{'readonly': ['|',('exectime', '=', 'completed'),'&amp;',('id', '!=', False), ('recurrency','=',True)]}"/>
                            <field name="duration" attrs="{'readonly': [('exectime', '=', 'completed')]}" widget="float_time" required="1" class="meeting_duration dn_time_picker"/>
                            <field name="start" attrs="{'invisible': True}"/>
                            <field name="stop" attrs="{'invisible': True}"/>
                            <field name="categ_ids" widget="many2many_tags" options="{'no_create_edit': True}" attrs="{'invisible': True}"/>
                        </group>

                        <group class="emeeting">
                            <field class="conference" name="conference_bridge_number"/>
                            <field class="pin" name="pin"/>
                            <field attrs="{'invisible': [('id', '=', False)]}" name="video_call_link" widget="url"/>
                            <field class="end_call" name="end_call"/>
                            <field class="password" name="password"/>
                        </group>

                        <group readonly="1" >

                            <field name="company" attrs="{'readonly': [('exectime', '=', 'completed')]}" string="Location"/>
                            <label for="address"/>
                            <div class="o_address_format">
                                <field name="address" placeholder="Street 1" attrs="{'readonly': [('exectime', '=', 'completed')]}" style="resize:none"/>
                                <field name="street" attrs="{'readonly': [('exectime', '=', 'completed')]}" placeholder="Street 2"/>
                                <span class='oe_read_only' attrs="{'invisible': [('address', '=', False),('street', '=', False)]}">, </span>
                                <field name="zip" attrs="{'readonly': [('exectime', '=', 'completed')]}" class="zip masked_input" placeholder="Zip"/>
                                <span class='oe_read_only' attrs="{'invisible': [('zip', '=', False)]}">, </span>
                                <field name="city" attrs="{'readonly': [('exectime', '=', 'completed')]}" style="margin-right: 4px;" placeholder="City"/>
                                <span class='oe_read_only' attrs="{'invisible': [('city', '=', False)]}"><br/></span>
                                <field name="country_state" attrs="{'readonly': [('exectime', '=', 'completed')]}" style="margin-right: 4px;" domain="[('country_id','=',country)]" placeholder="State" options="{'no_create': True,'no_open ': True,'no_quick_create': True,                                        'no_create_edit' : True, 'no_open': True}"/>
                                <span class='oe_read_only' attrs="{'invisible': [('country_state', '=', False)]}">, </span>
                                <field name="country" required="1" attrs="{'readonly': [('exectime', '=', 'completed')]}" options="{'no_create': True,'no_open ': True,'no_quick_create': True,'no_create_edit' : True, 'no_open': True}"/>
                            </div>
                        </group>
                            <group>
                            <field name="description" attrs="{'readonly': [('exectime', '=', 'completed')]}" />
                        </group>
                        <div class="oe_edit_only attendees">
                            <label for="partner_ids" string="Attendees"/>
                            <h3>
                                <field name="partner_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" widget="many2manyattendee" options="{'no_quick_create': True, 'no_create_edit' : True}" placeholder="Select attendees..." context="{'force_email':True}" class="oe_inline">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </h3>
                        </div>
                        </div>
                        <div name="mp_roster" class="o2m_kanban oe_read_only roster-item">
                            <h4>Roster</h4>
                            <button class="btn-defult roster-item roster-item"
                                    attrs="{'invisible': ['|','|',('publish','=',False),('exectime','=','past'),('exectime','=','completed')]}"
                                    name="action_sendmail" type="object"
                                    string="E-Mail Meeting Invite"
                                    icon="fa-envelope"
                                    groups="meeting_point.group_meeting_admin"
                            />
                            <div class="dnroster roster-item">
                               <field name="attendee_ids" mode="kanban">
                               </field>
                            </div>
                        </div>

                        <div name="readonly_completed_2">
                            <group groups="meeting_point.group_meeting_admin">
                            <field name="alarm_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" widget="many2many_tags"/>
                        </group>
                        <div class="o2m_kanban">
                            <h4>Surveys</h4>
                            <field name="survey_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" string=" " mode="kanban">
                                <form string="Survey">
                                    <style>
                                        .o_form_statusbar
                                        {
                                            display:none !important;
                                        }
                                    </style>
                                    <field name="id" class="survey_id o_hidden"/>
                                    <field name="seen_by_me" class="survey_seen o_hidden"/>
                                    <field name="tot_start_survey" invisible="1"/>
                                    <field name="is_closed" invisible="1"/>

                                    <header groups="meeting_point.group_meeting_admin">
                                        <button name="action_test_survey" string="Design Survey" type="object" class="oe_highlight" invisible="1"/>
                                        <button name="action_test_survey" string="Test Survey" type="object" attrs="{'invisible': [('id', '=', False)]}"/>
                                        <!--<button name="action_print_survey" string="Print Survey" type="object" attrs="{'invisible': [('id', '=', False)]}"/>-->
                                        <button name="action_send_survey" string="Share and invite by email" type="object" class="oe_highlight" attrs="{'invisible': [('id', '=', False)]}"/>
                                        <button name="action_result_survey" string="View results" type="object" attrs="{'invisible': ['|',('id', '=', False), ('tot_start_survey', '!=', 0)]}"/>
                                        <button name="action_result_survey" string="View results" type="object" class="oe_highlight" attrs="{'invisible': [('tot_start_survey', '=', 0)]}"/>
                                        <field name="stage_id" widget="statusbar" clickable="True"/>
                                    </header>

                                    <sheet>
                                        <div class="oe_button_box" name="button_box">
                                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" attrs="{'invisible': [('is_closed', '=', False)]}">
                                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                                            </button>
                                            <button name="action_survey_user_input" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                                                <field string="Answers" name="tot_comp_survey" widget="statinfo"/>
                                            </button>
                                        </div>
                                        <div class="oe_title" style="width: 100%;">
                                            <label for="title" class="oe_edit_only"/>
                                            <h1>
                                                <field name="title" placeholder="Title"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <field name="survey_type" class="survey_type"/>
                                        </group>

                                        <group>
                                            <field name="meeting_id" invisible="1" domain="[('publish','!=',False)]" widget="selection" options="{'no_create_edit': True}"/>
                                        </group>
                                        <notebook class="survey_questions">
                                            <page string="Edit Questions">
                                                <field name="question_ids" mode="tree" nolabel="1">
                                                    <tree>
                                                        <field name="sequence" widget="handle"/>
                                                        <field name="question"/>
                                                        <field name="type"/>
                                                    </tree>
                                                </field>
                                            </page>
                                            <page string="Options" invisible="1">
                                                <group class="o_label_nowrap">
                                                    <field name="users_can_go_back" string="User can come back in the previous page"/>
                                                    <field name="auth_required"/>
                                                    <field name="quizz_mode" groups="base.group_no_one"/>
                                                </group>
                                            </page>
                                        </notebook>
                                    </sheet>
                                    <div class="oe_chatter">
                                        <field name="message_follower_ids" widget="mail_followers"/>
                                        <field name="message_ids" widget="mail_thread"/>
                                    </div>
                                    <script src="/meeting_point/static/js/survey_common.js"/>
                                </form>
                            </field>
                        </div>

                        <notebook invisible="1">
                            <page string="Options" attrs="{'invisible':True}">
                                <group>
                                    <div>
                                        <group>
                                            <field name="recurrency" invisible="1" options="{'no_create': True,'no_open ': True,'no_quick_create': True, 'no_create_edit' : True}"/>
                                        </group>
                                        <div attrs="{'invisible': [('recurrency', '=', False)]}">
                                            <group>
                                                <label for="interval"/>
                                                <div class="o_row">
                                                    <field name="interval" attrs="{'required': [('recurrency', '=', True)]}"/>
                                                    <field name="rrule_type" attrs="{'required': [('recurrency', '=', True)]}"/>
                                                </div>
                                                <label string="Until" for="end_type"/>
                                                <div class="o_row">
                                                    <field name="end_type" attrs="{'required': [('recurrency', '=', True)]}"/>
                                                    <field name="count" attrs="{'invisible': [('end_type', '!=', 'count')], 'required': [('recurrency', '=', True)]}"/>
                                                    <field name="final_date" attrs="{'invisible': [('end_type', '!=', 'end_date')], 'required': [('end_type', '=', 'end_date')]}"/>
                                                </div>
                                            </group>
                                            <group attrs="{'invisible': [('rrule_type', '!=', 'weekly')]}" name="weekdays">
                                                <field name="mo"/>
                                                <field name="tu"/>
                                                <field name="we"/>
                                                <field name="th"/>
                                                <field name="fr"/>
                                                <field name="sa"/>
                                                <field name="su"/>
                                            </group>
                                            <group attrs="{'invisible': [('rrule_type', '!=', 'monthly')]}">
                                                <label string="Day of Month" for="month_by"/>
                                                <div class="o_row">
                                                    <field name="month_by"/>
                                                    <field name="day" attrs="{'required': [('month_by', '=', 'date'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'date')]}"/>
                                                    <field name="byday" string="The" attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'day')]}"/>
                                                    <field name="week_list" nolabel="1" attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'day')]}"/>
                                                </div>
                                            </group>
                                        </div>
                                    </div>
                                    <group>
                                        <field name="privacy" invisible="1"/>
                                        <field name="show_as" invisible="1"/>
                                        <field name="rrule" invisible="1" readonly="0"/>
                                        <field name="recurrent_id" invisible="1"/>
                                    </group>
                                </group>
                            </page>

                            <page invisible="1" string="Misc" groups="base.group_no_one">
                                <group>
                                    <label for="user_id" string="Owner"/>
                                    <field name="user_id" nolabel="1"/>
                                </group>
                            </page>

                        </notebook>

                        <div class="mtopic_tree">
                            <h3>Agenda Topics</h3>
                            <sheet>
                                <field name="topic_ids" attrs="{'readonly': [('exectime', '=', 'completed')]}" class="oe_inline"/>
                            </sheet>
                        </div>
                        </div>
                        <div class="o2m_kanban">
                            <h4>Meeting Documents</h4>
                            <field name="doc_ids" class="kanban_document" mode="kanban"/>
                        </div>
                        <div name="readonly_completed_3">
                        <div class="o2m_kanban">
                            <h4>Documents For Signatures</h4>
                            <field name="document_ids"
                                   attrs="{'readonly': [('exectime', '=', 'completed')]}"
                                   class="kanban_document"
                                   mode="kanban"
                            />
                        </div>
                        </div>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                    <script type="text/javascript" src="/meeting_point/static/js/meeting_point.js"/>
                    <script type="text/javascript" src="/meeting_point/static/js/attendance.js"/>
                </form>
            </field>
        </record>

        <record id="meeting_point_event_form_archive" model="ir.ui.view">
            <field name="name">meeting.point.event.form.archive</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="meeting_point.meeting_point_event_form"/>
            <field name="mode">primary</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="edit">false</attribute>
                    <attribute name="delete">false</attribute>
                    <attribute name="create">false</attribute>
                </xpath>
                 <xpath expr="//form" position="inside">
                    <style>
                      ul.survey_kanban li:nth-child(1){
                        display:none;
                      }
                      ul.survey_kanban li:nth-child(2){
                        display:none;
                      }
                    </style>
                </xpath>
            </field>
        </record>

        <record id="meeting_point_event_form_completed" model="ir.ui.view">
            <field name="name">meeting.point.event.form.completed</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="meeting_point.meeting_point_event_form"/>
            <field name="mode">primary</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="delete">false</attribute>
                </xpath>

                <xpath expr="//div[@name='mp_roster']" position="attributes">
                   <attribute name="class">o2m_kanban roster-item</attribute>
                </xpath>

                <xpath expr="//div[@name='readonly_completed_1']" position="attributes">
                   <attribute name="class">oe_read_only</attribute>
                </xpath>

                <xpath expr="//div[@name='readonly_completed_2']" position="attributes">
                   <attribute name="class">oe_read_only</attribute>
                </xpath>

                <xpath expr="//div[@name='readonly_completed_3']" position="attributes">
                   <attribute name="class">oe_read_only</attribute>
                </xpath>
            </field>
        </record>

                                <record id="calendar.view_conference" model="ir.ui.view">
            <field name="name">calendar.conference.form</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <form string="Meetings">
                    <link rel="stylesheet" href="/meeting_point/static/css/conference.css"/>
                    <div id="jitsi-meet-container" style="text-align:center">
                        <div id="meeting-info-panel">
                            <h6 style="padding-top:6px">
                                <button id='meeting-info-btn'>Show/Hide Meeting Info</button>
                            </h6>
                            <h6 id='meeting-info-box'>
                                <div class="url"></div>
                                <div class="pin"></div>
                                <div class="dialin">Dial-in: +1.512.402.2718</div>
                            </h6>
                        </div>
                        <div id="meeting-room">
                        </div>
                    </div>

                    <script src="/meeting_point/static/js/conference.js"></script>
                </form>
            </field>
        </record>

        <record id="meeting_point_attendee_kanban" model="ir.ui.view">
            <field name="name">meeting_point.attendee.kanban</field>
            <field name="model">calendar.attendee</field>
            <field name="arch" type="xml">
                <kanban create="false">
                    <field name="state"/>
                    <field name="attendance"/>
                    <field name="exectime"/>
                    <field name="response_by"/>
                     <field name="mail_sent"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette oe_kanban_global_click " style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.6);transition: 0.3s">
                               <div class="oe_module_icon" style="border:1px solid #cfcfcf; margin-right:5px;">
                                        <field name="photo" widget="image"/>
                                    </div>
                                <div class="oe_module_desc">

                                    <div style="font-weight:bold">
                                        <div><field name="partner_id"/> </div>
                                        <div><field name="email" widget="email"/>
                                            <span title="Email Sent" t-if="record.mail_sent.value=='True'" class="fa fa-check-square-o fa-lg text-success ml4" groups="meeting_point.group_meeting_admin"></span>
                                            <span title="Email Failed" t-if="record.mail_sent.value=='Fail'" class="fa fa-exclamation-circle fa-lg text-danger ml4" groups="meeting_point.group_meeting_admin"></span>

                                        </div>
                                        <div>Status:<span class="ml4 badge"><field class="badge" name="state"/> </span></div>
                                        <div class="fa fa-calendar-check-o" groups="!meeting_point.group_meeting_admin" attrs="{'invisible': [('exectime', '=', 'upcoming')]}">
                                            <span>: <field name="attendance"/></span>
                                        </div>
                                        <div class="fa fa-calendar-check-o" groups="meeting_point.group_meeting_admin" attrs="{'invisible': [('exectime', '!=', 'past')]}">
                                            <span>: <field name="attendance"/></span>
                                        </div>
                                        <div attrs="{'invisible': [('response_by', '!=', ''),('response_by', '!=', 'Self')]}" groups="meeting_point.group_meeting_admin">Responded by: <span class="ml4">
                                            <field name="response_by"/> </span>
                                        </div>
                                    </div>
                                    <div t-if="record.exectime.value=='ongoing' or record.exectime.value=='completed'" class="roster-buttons" groups="meeting_point.group_meeting_admin">
                                        <t>
                                           <button type="object" name="action_absent" class="btn btn-primary btn-sm">
                                               <t t-if="record.attendance.value=='Absent'">
                                                    <i class="fa fa-check fa-lg" style="color:white"/>
                                                </t>
                                               Absent
                                           </button>
                                        </t>

                                        <t>
                                           <button type="object" name="action_inperson" class="btn btn-primary btn-sm">
                                               <t t-if="record.attendance.value=='In-Person'">
                                                    <i class="fa fa-check fa-lg" style="color:white"/>
                                                </t>
                                               In-Person
                                           </button>
                                        </t>

                                        <t>
                                           <button type="object" name="action_online" class="btn btn-primary btn-sm">
                                               <t t-if="record.attendance.value=='Online'">
                                                    <i class="fa fa-check fa-lg" style="color:white"/>
                                                </t>
                                               Online
                                           </button>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_upcoming_meeting" model="ir.actions.act_window">
            <field name="name">Upcoming Meetings</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">kanban,calendar,form,tree</field>
            <field name="domain">[]</field>
            <field name="domain">[('stop','>=', time.strftime('%Y-%m-%d %H:%M:%S')),('publish','=',True)]</field>
        </record>

        <record id="action_draft_meeting" model="ir.actions.act_window">
            <field name="name">Meeting Drafts</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">kanban,calendar,form,tree</field>
            <field name="domain">[('stop','>=', time.strftime('%Y-%m-%d')),('publish','=',False)]</field>
        </record>

        <record id="action_archives_meeting" model="ir.actions.act_window">
            <field name="name">Meeting Archives</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">kanban,calendar,form,tree</field>
            <!--'&gt;='-->
            <field name="domain">[('archived','=', True)]</field>
        </record>

        <record id="action_archive_kanban" model="ir.actions.act_window.view">
