            <field name="view_id" ref="meeting_point_event_kanban_archive"/>
        </record>

        <record id="action_archive_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_archives_meeting"/>
            <field name="sequence" eval="21"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="meeting_point_event_form_archive"/>
