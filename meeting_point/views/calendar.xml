<odoo>
    <data>

        <record id="calendar.view_calendar_event_form_popup" model="ir.ui.view">
            <field name="name">calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <form string="Meetings">
                    <style>
                        .modal-footer .o_form_button_cancel{
                            display:none

                        }

                    </style>
                    <field name="res_model" invisible="1"/>
                    <field name="res_id" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="is_attendee" invisible="1"/>
                    <field name="allday" invisible="1"/>
                    <field name="is_active_yet" invisible="1"/>
                    <field name="attendee_status" class = "statusValue" invisible="1"/>
                    <field name="conference_status" class="conference_status o_hidden"/>
                    <field name="id" class="o_hidden meeting_id"/>
                    <field name="im_attendee" class="o_hidden is_attendee"/>
                    <!--<a href="/web#view_type=form&amp;model=calendar.event&amp;action=meeting_point.action_upcoming_meeting"-->
                       <!--class="meeting_link btn btn-sm btn-primary">Details</a>-->
                    <group>
                        <field name="name" string="Meeting Subject" />
                        <field name="start" string="Starting at" />
                        <field name="stop" string="Ending at" />
                        <field name="duration" widget="float_time" class="oe_inline"/>
                        <field name="location" string="Location" class="oe_read_only"/>
                    </group>
                    <!--attrs="{'invisible': [('is_active_yet','=','no')]}"-->
                     <group>
                            <field name="video_call_link" widget="url" />
                        <!--<button type="object" class="btn-primary detail_btn oe_read_only"  name="start_conference" attrs="{'invisible': [('exectime', 'not in', ['upcoming','ongoing'])]}">Join</button>-->
                        <field name="conference_bridge_number" class="conference"/>
                        <field name="pin" class="pin" />
                        </group>
                    <div class="detail_btn o_hidden acceptance_buttons_new"  style="display:flex">

                                            <div class="accet" style="display:none !important">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_accept"><i class="fa fa-check fa-lg" style="color:white"/>Accept
                                                </button>
                                            </div>
                                            <div class="accept_visible">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_accept">Accept
                                                </button>
                                            </div>

                                            <div class="declin " style="display:none !important">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_decline"><i class="fa fa-check fa-lg" style="color:white"/>Decline
                                                </button>
                                            </div>
                                            <div class="decline_visible">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_decline">Decline
                                                </button>
                                            </div>

                                            <div class="tentativehide" style="display:none !important">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_tentative"><i class="fa fa-check fa-lg" style="color:white"/>Tentative
                                                </button>
                                            </div>
                                            <div class="tentative_visible">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_tentative">Tentative
                                                </button>
                                            </div>
                                            <div>
                                                <button type="object" class="btn-primary" name="go_to_meeting">Details</button>
                                            </div>
                    </div>

                    <script src="/meeting_point/static/js/event_popup.js"></script>
                </form>
            </field>
        </record>

        <record id="meeting_point_kanban" model="ir.ui.view">
            <field name="name">meeting_point.kanban</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban default_order="start_datetime">
                    <field name="start_datetime"/>
                    <field name="publish"/>
                    <field name="attendee_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette">
                                <a type="object" style="color:#4c4c4c" name="go_to_meeting" class="oe_module_desc">
                                    <div class="meeting_info">
                                        <div class="date_tam" style="">
                                            <div class="o_day" style="font-size: 26px;">
                                                <t t-esc="record.start_datetime.raw_value.getDate()"/>
                                            </div>
                                            <div>
                                                <t t-esc="moment(record.start_datetime.raw_value).format('MMM')"/>
                                                <t t-esc="record.start_datetime.raw_value.getFullYear()"/>
                                            </div>
                                            <div>
                                                <t t-esc="moment(record.start_datetime.raw_value).format('LT')"/>
                                            </div>
                                        </div>
                                        <div class="details">
                                            <h3>
                                                <field name="name"/>
                                            </h3>
                                            <!--<field name="start_datetime"/>-->
                                            <p class="oe_module_name">
                                                <p>
                                                    <field name="location" style="margin-right: 4px;" string="Location"/>
                                                </p>
                                            </p>
                                            <div class="current_status">
                                                <field name="attendee_status" invisible="1"/>
                                                <field name="publish" invisible="1"/>
                                            </div>
                                        </div>
                                    </div>
                                    <t t-if="record.publish.value">
                                        <div class="acceptancebuttons">
                                            <t t-if="record.attendee_status.value=='Accepted'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_accept">
                                                    <i class="fa fa-check fa-lg" style="color:white"/>Accept

                                                </button>
                                            </t>
                                            <t t-if="record.attendee_status.value!='Accepted'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_accept">Accept</button>
                                            </t>
                                            <t t-if="record.attendee_status.value=='Declined'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_decline">
                                                    <i class="fa fa-check fa-lg" style="color:white"/>Decline

                                                </button>
                                            </t>
                                            <t t-if="record.attendee_status.value!='Declined'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_decline">Decline</button>
                                            </t>
                                            <t t-if="record.attendee_status.value=='Uncertain'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_tentative">
                                                    <i class="fa fa-check fa-lg" style="color:white"/>Tentative
                                                </button>
                                            </t>
                                            <t t-if="record.attendee_status.value!='Uncertain'">
                                                <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_tentative">Tentative</button>
                                            </t>
                                        </div>
                                    </t>
                                </a>
                                <script src="/meeting_point/static/js/meeting_kanban.js"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="meeting_point_event_kanban_archive" model="ir.ui.view">
            <field name="name">meeting.point.event.kanban.archive</field>
            <field name="model">calendar.event</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <kanban default_order="start_datetime">
                    <field name="start_datetime"/>
                    <field name="is_active_yet"/>
                    <field name="attendee_status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette oe_kanban_global_click ">
                                <div class="oe_module_desc">
                                    <div class="meeting_info">
                                        <div class="date_tam" style="">
                                            <div class="o_day" style="    font-size: 26px;">
                                                <t t-esc="record.start_datetime.raw_value.getDate()"/>
                                            </div>
                                            <div>
                                                <t t-esc="moment(record.start_datetime.raw_value).format('MMM')"/>
                                                <t t-esc="record.start_datetime.raw_value.getFullYear()"/>
                                            </div>
                                            <div>
                                                <t t-esc="moment(record.start_datetime.raw_value).format('LT')"/>
                                            </div>
                                        </div>
                                        <div class="details">
                                            <h2>
                                                <field name="name"/>
                                            </h2>
                                                 <div class="o_hidden pblic_evnt_id">
                                            <field name="id" class="o_hidden" />
                                            </div>
                                            <p class="oe_module_name">
                                                <p>
                                                    <field name="location" string="Location"/>
                                                </p>

                                            </p>

                                            <div class="current_status">
                                                <field name="attendee_status" invisible="1"/>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <script src="/meeting_point/static/js/meeting_kanban.js" />
                            </div>
