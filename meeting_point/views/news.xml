<odoo>
    <data>

        <record id="view_meeting_news_admin_home_tree" model="ir.ui.view">
            <field name="name">meeting_point.news.admin.tree</field>
            <field name="model">meeting_point.news</field>
            <field name="sequence" eval="1"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="description" />
                    <field name="doc_ids" />
                    <field name="video_ids"  />
                </tree>
            </field>
        </record>

        <record id="view_meeting_news_admin_form" model="ir.ui.view">
            <field name="name">meeting_point.news.admin.form</field>
            <field name="model">meeting_point.news</field>
            <field name="sequence" eval="2"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="title" />
                        <field name="photo" filename="filename" widget="image"/>
                        <field name="filename" invisible="1"/>
                        <field name="description" />
                        <field name="doc_ids" />
                        <field name="video_ids" />
                        <!--<field name="validated" />-->
                        <field name="validated" invisible="1" />
                    </group>
                    <script src="/meeting_point/static/js/news.js"/>
                </form>
            </field>
        </record>

        <record id="view_meeting_news_user_form" model="ir.ui.view">
            <field name="name">meeting_point.news.user.form</field>
            <field name="model">meeting_point.news</field>
            <field name="sequence" eval="3"/>
            <field name="arch" type="xml">
                <form edit="false" class="home_form">
                    <style>
                        .o_control_panel{
                            display: none !important;
                        }
                    </style>
                    <script src="/meeting_point/static/js/home_include.js"/>
                    <div class="home_btns">
                        <span class="welcome_btn btn bnt-default">Welcome</span>
                        <span class="calendar_btn btn bnt-default">Calendar</span>
                        <span class="to_do_items btn bnt-default">To-Do Items<field name="to_do_items_count" class="to-do-count" attrs="{'invisible': [('to_do_items_count', '=', 0)]}"/> <span class="seen_not_seen"/></span>
                    </div>
                    <div class="mphome_wrapper row">
                        <div class="col-lg-12 welcome">
                            <h1 class="HeadTitle" id="myScrollspy">
                                <field name="title"/>
                            </h1>
                            <div class="clearfix">
                                <field class="HeadLogo" name="photo" widget="image"/>
                                <field name="description" class="message"/>
                                <field name="doc_ids" mode="kanban" context="{'kanban_view_ref': 'dn_documents.dn_docs_kanban_annotator'}" />
                                <field name="video_ids" widget="doc_video"/>
                            </div>
                        </div>
                        <div id="calendar" class="col-lg-12"/>
                        <div class="col-lg-12 to-do-items">
                            <div class="ToDoitemWrapper">
                                <h5>Upcoming Meetings</h5>
                                <div class="slider_div">
                                    <field name="pending_meetings" mode="kanban">
                                        <kanban default_order="start_datetime">
                                            <field name="start_datetime"/>
                                            <field name="publish"/>
                                            <field name="attendee_status"/>
                                            <templates>
                                                <t t-name="kanban-box">
                                                    <div class="oe_module_vignette">
                                                        <a type="object" style="color:#4c4c4c" name="go_to_meeting" class="oe_module_desc">
                                                            <div class="meeting_info">
                                                                <div class="date_tam" style="">
                                                                    <div class="o_day" style="font-size: 26px;">
                                                                        <t t-esc="record.start_datetime.raw_value.getDate()"/>
                                                                    </div>
                                                                    <div>
                                                                        <t t-esc="moment(record.start_datetime.raw_value).format('MMM')"/>
                                                                        <t t-esc="record.start_datetime.raw_value.getFullYear()"/>
                                                                    </div>
                                                                    <div>
                                                                        <t t-esc="moment(record.start_datetime.raw_value).format('LT')"/>
                                                                    </div>
                                                                </div>
                                                                <div class="details">
                                                                    <h3>
                                                                        <field name="name"/>
                                                                    </h3>
                                                                    <!--<field name="start_datetime"/>-->
                                                                    <p class="oe_module_name">
                                                                        <p>
                                                                            <field name="location" style="margin-right: 4px;" string="Location"/>
                                                                        </p>
                                                                    </p>
                                                                    <div class="current_status">
                                                                        <field name="attendee_status" invisible="1"/>
                                                                        <field name="publish" invisible="1"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <t t-if="record.publish.value">
                                                                <div class="acceptancebuttons">
                                                                    <t t-if="record.attendee_status.value=='Accepted'">
                                                                        <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_accept">
                                                                            <i class="fa fa-check fa-lg" style="color:white"/>Accept

                                                                        </button>
                                                                    </t>
                                                                    <t t-if="record.attendee_status.value!='Accepted'">
                                                                        <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_accept">Accept</button>
                                                                    </t>
                                                                    <t t-if="record.attendee_status.value=='Declined'">
                                                                        <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_decline">
                                                                            <i class="fa fa-check fa-lg" style="color:white"/>Decline

                                                                        </button>
                                                                    </t>
                                                                    <t t-if="record.attendee_status.value!='Declined'">
                                                                        <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_decline">Decline</button>
                                                                    </t>
                                                                    <t t-if="record.attendee_status.value=='Uncertain'">
                                                                        <button type="object" class="btn btn-primary btn-sm acceptancebtn acceptancebuttonsactive" name="do_tentative">
                                                                            <i class="fa fa-check fa-lg" style="color:white"/>Tentative
                                                                        </button>
                                                                    </t>
                                                                    <t t-if="record.attendee_status.value!='Uncertain'">
                                                                        <button type="object" class="btn btn-primary btn-sm acceptancebtn" name="do_tentative">Tentative</button>
                                                                    </t>
                                                                </div>
                                                            </t>
                                                        </a>
                                                        <script src="/meeting_point/static/js/meeting_kanban.js"/>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </div>
                                <!--<div class="survey_container"></div>-->
                                <h5>Surveys</h5>
                                <div class="slider_div">
                                    <field name="pending_surveys" mode="kanban"/>
                                </div>
                                <!--<div class="sign_doc_container"></div>-->
                                <h5>Documents To Sign</h5>
                                <div class="slider_div">
                                    <field name="pending_documents" context="{'kanban_view_ref': 'meeting_point.sign_doc_kanban'}" mode="kanban"/>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div style="display:none">
                        <field name="public_events" context="{'form_view_ref': 'calendar.view_calendar_event_form_popup'}" mode="kanban"/>
                        <field name="public_event"/>
                    </div>
                    <script src="/meeting_point/static/extra.js"/>
                    <script src="/meeting_point/static/js/home.js"/>
                </form>
            </field>
        </record>

        <record id="view_meetingnews_video_form" model="ir.ui.view">
            <field name="name">meeting_point.news.video.form</field>
            <field name="model">meeting_point.news.video</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="url" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_meeting_news_doc_form" model="ir.ui.view">
            <field name="name">meeting_point.news.doc.form</field>
            <field name="model">meeting_point.news.doc</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="attachment" filename="filename" />
                        <field name="filename" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_news_user_home" model="ir.actions.act_window" >
            <field name="name">Home</field>
            <field name="res_model">meeting_point.news</field>
            <field name="view_id" ref="view_meeting_news_user_form" />
            <field name="res_id" ref="meeting_point_home_news_record"/>
        </record>

        <record id="action_adminhome" model="ir.actions.act_window">
            <field name="name">Admin Home</field>
            <field name="res_model">meeting_point.news</field>
            <field name="res_id" ref="meeting_point_home_news_record"/>
            <field name="view_mode">form</field>
        </record>

        <record id="action_news_admin" model="ir.actions.act_window">
            <field name="name">News</field>
            <field name="res_model">meeting_point.news</field>
            <field name="view_id" ref="view_meeting_news_admin_home_tree"/>
            <field name="view_mode">tree,form</field>
        </record>

