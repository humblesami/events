<odoo>
    <data>

        <record id="view_form_voting" model="ir.ui.view">
            <field name="name">Voting Form</field>
            <field name="model">meeting_point.voting</field>
            <field name="arch" type="xml">
                <form string="Voting/Approval" class="voting_form">
                    <link rel="stylesheet" href="/meeting_point/static/css/voting.css" />
                    <field name="id" invisible="1" class="voting_id"/>
                    <group>
                        <field name="name"/>
                        <field name="meeting_id" invisible="1"/>
                        <field name="motion_first"/>
                        <field name="motion_second"/>
                        <field name="open_date"/>
                        <field name="close_date"/>
                        <field name="description"/>
                        <field name="voting_type"/>
                        <field name="public_visibility"/>
                        <!--<field  name="public_url_new" widget="url" attrs="{'invisible': [('public_url_new','=',False)]}"/>-->
                        <field attrs="{'invisible': [('meeting_id', '!=', False)]}" name="partner_ids" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"
                                   placeholder="Select respondents..." context="{'force_email':True}" class="oe_inline"/>
                        <field class="kanban_document dn_attatchment_btn" name="document_ids"
                               context="{'kanban_view_ref': 'dn_documents.dn_docs_kanban'
                               ,'form_view_ref': 'dn_documents.doc_edit_form'}"
                               mode="kanban" />
                    </group>
                    <div class="voting_choice_container" attrs="{'invisible' : [('voting_type', '=', False)]}">
                      <div class="vote_options oe_read_only" attrs="{'invisible' : [('voting_type', '!=', 'voting')]}">
                        <span class="vote_choice"><input type="radio" class="voting_yes yes" name="voting" value="yes"/><span>Yes</span></span>
                        <span class="vote_choice"><input type="radio" class="voting_no no" name="voting" value="no"/><span>No</span></span>
                        <span class="vote_choice"><input type="radio" class="voting_abstain abstain" name="voting" value="abstain"/><span>Abstain</span></span>
                      </div>

                      <div class="vote_options oe_read_only" attrs="{'invisible' : [('voting_type', '!=', 'approval')]}">
                        <span class="vote_choice"><input type="radio" class="approval_approve approve" name="approval" value="approve"/><span>Approve</span></span>
                        <span class="vote_choice"><input type="radio" class="approval_reject reject" name="approval" value="reject"/><span>Reject</span></span>
                      </div>

                    </div>
                    <div groups="!meeting_point.admin" class="oe_read_only results_container" attrs="{'invisible': [('public_visibility', '=', False)]}">
                        <h3>Results</h3>
                        <div class="results"></div>
                    </div>
                    <div groups="meeting_point.admin" class="oe_read_only results_container">
                        <h3>Results</h3>
                        <div class="results"></div>
                    </div>
                    <script src="/meeting_point/static/js/voting.js"/>
                </form>
            </field>
        </record>

        <record id="meeting_point_voting_kanban" model="ir.ui.view">
            <field name="name">meeting.point.voting.kanban</field>
            <field name="model">meeting_point.voting</field>
            <field name="arch" type="xml">
                <kanban default_order="name">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <field name="name"/>
                                </div>
                                <div>
                                    <strong>
                                        <field name="voting_type"/>
                                    </strong>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <record id="action_meeting_voting" model="ir.actions.act_window">
            <field name="name">Voting</field>
            <field name="res_model">meeting_point.voting</field>
            <field name="view_mode">kanban,form, tree</field>
        </record>

        <record id="action_voting_answer" model="ir.actions.act_window">
            <field name="name">Voting Answer</field>
            <field name="res_model">meeting_point.votinganswer</field>
            <field name="view_mode">kanban, form, tree</field>
        </record>

        <!--templates for voting and approval-->
            <!-- First page of a survey -->
        <template id="voting_init" name="Voting Template">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="oe_structure" />
                    <div class="container">
                        <div class='jumbotron mt32'>
                            <h1 t-field='voting.name' />
                            <h1 t-field='voting.my_status' />
                            <div t-field='voting.description' class="oe_no_empty"/>
                            <a class="btn btn-primary btn-lg" t-att-href="'/vote/fill/%s' % (slug(voting))">
                                Start Voting
                            </a>
                        </div>
                    </div>
                    <div class="oe_structure" />
                </div>
            </t>
        </template>

        <template id="vote_submitted" name="Vote is Submitted">
            <t t-call="website.layout">
                <div class="wrap" style="margin-top:25px;">
                <div class="oe_structure"/>
                <div class="container">
                    <a id="votingBack" t-attf-href="/web#view_type=form&amp;model=meeting_point.voting&amp;id=#{votinganswer['voting_id'].id}&amp;action=meeting_point.action_meeting_voting" class="btn btn-default">Back to Voting</a>
                    <div class="jumbotron mt32">
                        <h2 id="submitted">Your Vote Has Been Submitted.</h2>
                        <span>Your Vote is <h4 t-field="votinganswer.user_answer" /></span>
                    </div>
                </div>
                <div class="oe_structure"/>
                </div>
            </t>
            <!--<t t-call="website.layout">-->
                <!--<div class="wrap">-->
                    <!--<div class="oe_structure"/>-->
                    <!--<div class="container">-->
                        <!--<t t-call="meeting_point.votepage" />-->
                    <!--</div>-->
                    <!--<div class="oe_structure"/>-->
                <!--</div>-->
            <!--</t>-->
        </template>

        <template id="voting" name="Voting">
            <t t-call="website.layout">
                <div class="wrap" style="margin-top:25px;">
                <div class="oe_structure"/>
                <div class="container">
                    <a id="votingBack" t-attf-href="/web#view_type=form&amp;model=meeting_point.voting&amp;id=#{voting.id}&amp;action=meeting_point.action_meeting_voting" class="btn btn-default">Back to Voting</a>
                    <div class="jumbotron mt32">
                        <h2 id="submitted">Your Vote Has Been Submitted.</h2>
                        <form class="voting_form">
                            <h2 t-field="voting.name"/>
                            <h4 t-field="voting.description" />
                            <div class="row voting_options-container">
                                <!--Voting Type "Yes"-->
                                <input type="radio" name="voting_options" t-att-value="yes" t-value="yes"/>
                                <span>Yes</span>

                                <!--Voting Type No-->
                                <input type="radio" name="voting_options" t-att-value="no" t-value="no"/>
                                <span>No</span>

                                <!--Voting Type Abstain-->
                                <input type="radio" name="voting_options" t-att-value="abstain" t-value="abstain"/>
                                <span>Abstain</span>
                            </div>
                            <script src="/meeting_point/static/js/voting.js"/>
                            <input type="hidden" class="user_choice"/>
                            <input type="hidden" name="voting_id" class="voting_id" t-att-value="voting.id"/>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="oe_structure"/>
                </div>
            </t>
            <!--<t t-call="website.layout">-->
                <!--<div class="wrap">-->
                    <!--<div class="oe_structure"/>-->
                    <!--<div class="container">-->
                        <!--<t t-call="meeting_point.votepage" />-->
                    <!--</div>-->
                    <!--<div class="oe_structure"/>-->
                <!--</div>-->
            <!--</t>-->
        </template>

        <!--Voting Options template-->
        <template id="voting_choice" name="voting choice">
            <div class="row voting_options-container">
            <!--Voting Type "Yes"-->
                <input type="radio" name="voting_options" t-att-value='yes' t-value="yes" />
                <span>Yes</span>

            <!--Voting Type No-->
                <input type="radio" name="voting_options" t-att-value='no' t-value="no" />
                <span>No</span>

            <!--Voting Type Abstain-->
                <input type="radio" name ="voting_options" t-att-value='abstain' t-value="abstain" />
                <span>Abstain</span>
            </div>
            <script src="/meeting_point/static/js/voting.js"></script>
            <input type="hidden" class = "user_choice" />
            <input name="voting_id" type="hidden" class="voting_id" t-att-value='voting.id' />
        </template>

        <template id="approval_choice" name="approval choice">
            <div class="row">
                <input type="radio" t-att-name="'%s' % ('approval_options')" t-att-value='Approve' />
                <span>Approve</span>
                <input type="radio" t-att-name="'%s' % ('approval_options')" t-att-value='Reject' />
                <span>Reject</span>
            </div>
        </template>

        <template id="votepage" name="VotePage">
            <div class="page-header">
                <h1 t-field='voting.name' />
                <div t-field='voting.description' class="oe_no_empty"/>
            </div>

            <div class="col-md-12">
                <form role="form" t-set="voting_opts" t-att-action="'/voting/answer/%s/%s/%s' % (slug(voting), token, voting_opts)"  t-att-data-submit="'/voting/answer/%s' % (slug(voting))">
                    <div t-if="voting.voting_type == 'voting'">
                        <t t-call="meeting_point.voting_choice"/>
                    </div>
                    <div t-if="voting.voting_type == 'approval'">
                        <t t-call="meeting_point.approval_choice"/>
                    </div>

                    <!--<a class="btn btn-primary btn-lg" t-att-href="'/voting/answer/%s/%s' % (slug(voting), token)">-->
                                <!--Submit Vote-->
                    <!--</a>-->
                     <button  type="submit" class="btn btn-primary" name="button_submit" value="finish">Submit Vote</button>
                    <!--<div class="text-center mt16 mb16">-->
                        <!--<button class="btn btn-primary" name="button_submit" value="finish">Submit Vote</button>-->
                    <!--</div>-->
                </form>
            </div>
        </template>
        <!--end-->

        <!--Voting Answer Page-->
        <template id="answerpage" name="Voting Answer Page">
        <div class="page-header">
            <h1 t-field='answer.user_id' />
            <div t-field='answer.voting_id' class="oe_no_empty"/>
            <div t-field='answer.user_answer' class="oe_no_empty"/>
        </div>
     </template>
        <!--end-->

    </data>
</odoo>