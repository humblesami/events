<odoo>
    <data>

        <record id="view_form_voting" model="ir.ui.view">
            <field name="name">Voting Form</field>
            <field name="model">meeting_point.voting</field>
            <field name="arch" type="xml">
                <form string="Voting/Approval" class="voting_form">
                    <link rel="stylesheet" href="/meeting_point/static/css/voting.css" />
                    <field name="id" invisible="1" class="voting_id"/>
                    <header>
                        <button name="action_result_voting" string="View results" type="object" class="oe_highlight" />
                    </header>
                    <group>
                        <field name="name"/>
                        <field name="meeting_id" invisible="1"/>
                        <field name="motion_first"
                               options="{'no_quick_create': True, 'no_create_edit' : True}"
                        />
                        <field name="motion_second"
                               options="{'no_quick_create': True, 'no_create_edit' : True}"
                        />
                        <field name="open_date"/>
                        <field name="close_date"/>
                        <field name="description"/>
                        <field name="voting_type_id"
                               options="{'no_quick_create': True, 'no_create_edit' : True}"
                        />
                        <field name="public_visibility"/>
                        <!--<field  name="public_url_new" widget="url" attrs="{'invisible': [('public_url_new','=',False)]}"/>-->
                        <field attrs="{'invisible': [('meeting_id', '!=', False)]}"
                               name="partner_ids" widget="many2many_tags"
                               options="{'no_quick_create': True, 'no_create_edit' : True}"
                               placeholder="Select respondents..."
                               class="oe_inline"
                        />
                        <field class="kanban_document dn_attatchment_btn" name="document_ids"
                               context="{'kanban_view_ref': 'dn_documents.dn_docs_kanban'
                               ,'form_view_ref': 'dn_documents.doc_edit_form'}"
                               mode="kanban" />

                    </group>
                    <div class="oe_read_only voting_choice_container" attrs="{'invisible' : [('voting_type_id', '=', False)]}">
                      <div class="vote_options">
                      </div>
                    </div>
                    <div class="oe_read_only results_container">
                        <h3>Results</h3>
                        <div class="results"></div>
                        <a href="#" class="btn btn-primary viewGraphically">View Graphically</a>
                        <field invisible="1" class="graphical_view_url" name="graphical_view_url"/>
                    </div>
                    <script src="/meeting_point/static/js/voting.js"/>
                </form>
            </field>
        </record>

        <record id="meeting_point_voting_kanban" model="ir.ui.view">
            <field name="name">meeting.point.voting.kanban</field>
            <field name="model">meeting_point.voting</field>
            <field name="arch" type="xml">
                <kanban default_order="name">
                    <field name="name"/>
                    <field name="voting_type_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                   <t t-esc="record.name.raw_value"/>
                                </div>
                                <div>
                                    <strong>
                                        <t t-raw="record.voting_type_id.value"/>
                                    </strong>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <record id="action_meeting_voting" model="ir.actions.act_window">
            <field name="name">Voting</field>
            <field name="res_model">meeting_point.voting</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_type" model="ir.actions.act_window">
            <field name="name">Voting Types</field>
            <field name="res_model">meeting_point.votingtype</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_option" model="ir.actions.act_window">
            <field name="name">Voting Type Options</field>
            <field name="res_model">meeting_point.votingoption</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_answer" model="ir.actions.act_window">
            <field name="name">Voting Answers</field>
            <field name="res_model">meeting_point.votinganswer</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_document" model="ir.actions.act_window">
            <field name="name">Voting Documents</field>
            <field name="res_model">meeting_point.votingdocument</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <menuitem
                name="Approval/Voting" id="menu_meeting_voting"
                parent="menu_root_settings"
                action="action_meeting_voting"
        />

        <menuitem
                name="Voting Types" id="menu_meeting_voting_type"
                action ="action_meeting_voting_type"
                parent="devmenu"
        />

        <menuitem
                name="Voting Type Options" id="menu_meeting_voting_option"
                action ="action_meeting_voting_option"
                parent="devmenu"
        />

        <menuitem
                name="Voting Answers" id="menu_meeting_voting_answer"
                action ="action_meeting_voting_answer"
                parent="devmenu"
        />

        <menuitem
                name="Voting Documents" id="menu_meeting_voting_document"
                action ="action_meeting_voting_document"
                parent="devmenu"
        />

        <!--templates for voting and approval-->
        <template id="voting_init" name="Voting Template">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="oe_structure" />
                    <div class="container">
                        <div class='jumbotron mt32'>
                            <h1 t-field='voting.name' />
                            <h1 t-field='voting.my_status' />
                            <div t-field='voting.description' class="oe_no_empty"/>
                            <a class="btn btn-primary btn-lg" t-att-href="'/vote/fill/%s' % (slug(voting))">
                                Start Voting
                            </a>
                        </div>
                    </div>
                    <div class="oe_structure" />
                </div>
            </t>
        </template>


                <template id="voting_approval_graphically" name="Graphical View Of Voting Answers">
            <t t-call="website.layout">
            <div class="oe_structure"/>
            <div class="container js_surveyresult">
                <div class="jumbotron mt32">
                    <h1><span t-field="voting.name"/> <span style="font-size:1.5em;" class="fa fa-bar-chart-o pull-right "/></h1>
                    <div t-field="voting.description" class="oe_no_empty"/>
                </div>


                <!--<div class="panel panel-default hidden-print">-->
                <!--    <div class="panel-heading"><span class="fa fa-filter"/>  Filters <span t-if="filter_display_data" class="pull-right text-primary clear_survey_filter"><i class="fa fa-times"/> Clear All Filters</span></div>-->
                <!--    <div class="panel-body">-->
                        <!--<span t-if="filter_finish == True">-->
                            <!--<span class="label label-default only_left_radius filter-all">All surveys</span><span class="label label-primary only_right_radius filter-finished">Finished surveys</span>-->
                        <!--</span>-->
                        <!--<span t-if="filter_finish == False">-->
                            <!--<span class="label label-primary only_left_radius filter-all">All surveys</span><span class="label label-default only_right_radius filter-finished">Finished surveys</span>-->
                        <!--</span>-->
                        <!--<span t-foreach="filter_display_data" t-as="filter_data">-->
                            <!--<span class="label label-primary only_left_radius"><i class="fa fa-filter"/></span><span class="label label-primary no_radius" t-esc="filter_data['question_text']"/><span class="label label-success only_right_radius" t-esc="' &gt; '.join(filter_data['labels'])"/>-->
                        <!--</span>-->
                <!--    </div>-->
                <!--</div>-->
                <div t-foreach="voting_dict['page_ids']" t-as="page_ids">
                    <div t-foreach="page_ids['question_ids']" t-as="question_ids" class="mt16">
                        <t t-set="input_summary" t-value="question_ids['input_summary']"/>
                        <t t-set="question" t-value="question_ids['question']"/>
                        <t t-set="graph_data" t-value="question_ids['graph_data']"/>
                        <t t-set="prepare_result" t-value="question_ids['prepare_result']"/>
                        <h4>
                            <span class="pull-right">
                                <span class="label label-success"><span t-esc="input_summary['answered']"/> Answered</span>
                                <span class="label label-danger"><span t-esc="input_summary['skipped']"/> Pending</span>
                            </span>
                        </h4>
                        <t t-call="meeting_point.result_choice"/>
                    </div>
                </div>
            </div>
            <div class="oe_structure"/>
        </t>
        </template>


        <template id="result_choice" name="Voting Choice Result">
            <div>
                <ul class="nav nav-tabs hidden-print">

                    <li class="active">
                        <a t-att-href="'#graph_question_%d' % voting.id" data-toggle="tab">
                            <i class="fa fa-bar-chart-o"/> Pie Chart
                        </a>
                    </li>
                    <li>
                        <a t-att-href="'#data_question_%d' % voting.id" data-toggle="tab">
                            <i class="fa fa-list-alt"/> Data
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane active survey_graph" t-att-id="'graph_question_%d' % voting.id"
                  t-att-data-question_id="voting.id" data-graph_type="pie" t-att-graph-data="graph_data">
                        <svg style="height:20em"/>
                    </div>

                    <div class="tab-pane" t-att-id="'data_question_%d' % voting.id">
                        <table class="table table-hover table-condensed">
                            <thead>
                                <tr>
                                    <th>Answer Choices</th>
                                    <th>User Responses</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="prepare_result['answers']" t-as="user_input">
                                    <td>
                                        <p t-esc="user_input['text']"/>
                                    </td>
                                    <td class="survey_answer">
                                        <span t-esc="round(user_input['count'] *100.0/(input_summary['answered'] or 1),2)"/> %
                                        <span t-esc="user_input['count']" class="label label-primary">Vote</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                 handle comments
                <div>
                    <t t-set="comments" t-value="prepare_result['comments']" />
                    <t t-if="comments">
                        <t t-call="survey.result_comments" />
                    </t>
                </div>
        </div>
    </template>



        <template id="voting_graphically" name="Graphical View Of Voting Answers">
            <t t-call="website.layout">
                <div class="wrap">
                    <div class="oe_structure" />
                    <div class="container">
                        <a id="votingBack" style ="position: relative; margin: 30px 0 0 15px;" t-attf-href="/web#view_type=form&amp;model=meeting_point.voting&amp;id=#{voting.id}&amp;action=meeting_point.action_meeting_voting" class="btn btn-default">Back to Voting</a>
                        <div class='jumbotron mt32'>
                            <h1>We Are Working On Graphical View of Voting Answers</h1>
                        </div>
                    </div>
                    <div class="oe_structure" />
                </div>
            </t>
        </template>




        <template id="vote_submitted" name="Vote is Submitted">
            <t t-call="website.layout">
                <div class="wrap" style="margin-top:25px;">
                <div class="oe_structure"/>
                <div class="container">
                    <a id="votingBack" t-attf-href="/web#view_type=form&amp;model=meeting_point.voting&amp;id=#{votinganswer['voting_id'].id}&amp;action=meeting_point.action_meeting_voting" class="btn btn-default">Back to Voting</a>
                    <div class="jumbotron mt32">
                        <h2 id="submitted">Your Vote Has Been Submitted.</h2>
                        <span>Your Vote is <h4 t-field="votinganswer.user_answer" /></span>
                    </div>
                </div>
                <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <template id="voting" name="Voting">
            <t t-call="website.layout">
                <div class="wrap" style="margin-top:25px;">
                <div class="oe_structure"/>
                <div class="container">
                    <a id="votingBack" t-attf-href="/web#view_type=form&amp;model=meeting_point.voting&amp;id=#{voting.id}&amp;action=meeting_point.action_meeting_voting" class="btn btn-default">Back to Voting</a>
                    <div class="jumbotron mt32">
                        <h2 id="submitted">Your Vote Has Been Submitted.</h2>
                        <form class="voting_form">
                            <h2 t-field="voting.name"/>
                            <h4 t-field="voting.description" />
                            <div class="row voting_options-container">
                                <!--Voting Type "Yes"-->
                                <input type="radio" name="voting_options" t-att-value="yes" t-value="yes"/>
                                <span>Yes</span>

                                <!--Voting Type No-->
                                <input type="radio" name="voting_options" t-att-value="no" t-value="no"/>
                                <span>No</span>

                                <!--Voting Type Abstain-->
                                <input type="radio" name="voting_options" t-att-value="abstain" t-value="abstain"/>
                                <span>Abstain</span>
                            </div>
                            <script src="/meeting_point/static/js/voting.js"/>
                            <input type="hidden" class="user_choice"/>
                            <input type="hidden" name="voting_id" class="voting_id" t-att-value="voting.id"/>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
                <div class="oe_structure"/>
                </div>
            </t>
        </template>

        <!--Voting Options template-->
        <template id="voting_choice" name="voting choice">
            <div class="row voting_options-container">
            <!--Voting Type "Yes"-->
                <input type="radio" name="voting_options" t-att-value='yes' t-value="yes" />
                <span>Yes</span>

            <!--Voting Type No-->
                <input type="radio" name="voting_options" t-att-value='no' t-value="no" />
                <span>No</span>

            <!--Voting Type Abstain-->
                <input type="radio" name ="voting_options" t-att-value='abstain' t-value="abstain" />
                <span>Abstain</span>
            </div>
            <script src="/meeting_point/static/js/voting.js"></script>
            <input type="hidden" class = "user_choice" />
            <input name="voting_id" type="hidden" class="voting_id" t-att-value='voting.id' />
        </template>

        <template id="approval_choice" name="approval choice">
            <div class="row">
                <input type="radio" t-att-name="'%s' % ('approval_options')" t-att-value='Approve' />
                <span>Approve</span>
                <input type="radio" t-att-name="'%s' % ('approval_options')" t-att-value='Reject' />
                <span>Reject</span>
            </div>
        </template>

    </data>

    <data noupdate="1">
        <record id="rec_voting_type1" model="meeting_point.votingtype">
            <field name="name">Approval</field>
        </record>

        <record id="rec_voting_type1_option1" model="meeting_point.votingoption">
            <field name="name">Accept</field>
            <field name="voting_type_id" eval="ref('rec_voting_type1')"/>
        </record>
        <record id="rec_voting_type1_option2" model="meeting_point.votingoption">
            <field name="name">Reject</field>
            <field name="voting_type_id" eval="ref('rec_voting_type1')"/>
        </record>

        <record id="rec_voting_type2" model="meeting_point.votingtype">
            <field name="name">Voting</field>
        </record>

        <record id="rec_voting_type2_option1" model="meeting_point.votingoption">
            <field name="name">Yes</field>
            <field name="voting_type_id" eval="ref('rec_voting_type2')"/>
        </record>
        <record id="rec_voting_type2_option2" model="meeting_point.votingoption">
            <field name="name">No</field>
            <field name="voting_type_id" eval="ref('rec_voting_type2')"/>
        </record>
        <record id="rec_voting_type2_option3" model="meeting_point.votingoption">
            <field name="name">Abstain</field>
            <field name="voting_type_id" eval="ref('rec_voting_type2')"/>
        </record>


    <!--</template>-->
        <template id="voting_result" name="Voting Resul">
        <!--<t t-call="website.layout">-->
             <div class="wrap">
               <!--<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>-->
                <script src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
                <script src="https://canvasjs.com/assets/script/jquery.canvasjs.min.js"></script>
                <div class="oe_structure"/>
                <div class="container">

                    <div class="jumbotron mt32">
                        <h1 t-field="voting.name"/>

                        <div t-foreach="voting_dict" t-as="o">

                        <div class="page">
                              <span t-esc="o['title']"/>
                            <span t-esc="o['text']"/>
                            <span t-esc="o['answer_id']"/>
                            <br/>
                            <span> Respondant</span> :
                             <span t-esc="o['respondant']"/>

                        </div>
                          <div t-foreach="graph_data" t-as="o" >
                            <span t-esc="o['label']"/>
                            <span t-esc="o['count']"/>
                            <br/>


                          </div>
                         </div>
                        <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                         <script type="text/javascript" src="/meeting_point/static/js/voteResult.js" />
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        <!--</t>-->
    </template>

    <!--email template-->

        <record id="email_template_approval_modified" model="mail.template">
            <field name="name">approval Template MeetVUE</field>
            <field name="model_id" ref="model_survey_survey" />
            <field name="subject">${object.name} invitation</field>
             <field name="email_to" >${ctx['emailTo']|safe}</field>
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
<p>Hello,</p>
<p>We are conducting a motion, and your response would be appreciated.</p>
<p><a style="margin-left: 85px; padding:5px 10px; border-radius: 3px; background-color:#875A7B; text-align:center; text-decoration:none; color:#F7FBFD;" href="${ctx['url']}">Please, click here to redirect to motion</a></p>
<p>Thanks for your participation!</p>
                ]]>
            </field>
        </record>


    </data>

</odoo>