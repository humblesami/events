<odoo>
    <data>

        <record id="view_form_voting" model="ir.ui.view">
            <field name="name">Voting Form</field>
            <field name="model">meeting_point.voting</field>
            <field name="arch" type="xml">
                <form string="Voting/Approval" class="voting_form">
                    <link rel="stylesheet" href="/meeting_point/static/css/voting.css"/>
                    <link rel="stylesheet" href="/meeting_point/static/css/meeting_form.css"/>
                    <field name="id" invisible="1" class="voting_id"/>
                    <sheet>
                        <group>
                            <field name="voting_type_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="name"/>
                            <field name="meeting_id" invisible="1"/>
                            <field name="meeting_id" options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('archived','=',False),('publish','=',True)]   "/>
                            <field name="partner_ids" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}" placeholder="Select respondents..." class="oe_inline"/>
                            <field name="topic_id" string="Agenda Topic" options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('meeting_id','=',meeting_id)]" attrs="{'invisible': [('meeting_id', '=', False)]}"/>

                            <!--<field  name="public_url_new" widget="url" attrs="{'invisible': [('public_url_new','=',False)]}"/>-->
                            <div>
                              <div class="o_form_label"><strong>Motion First</strong><span class="fa fa-user motion-icon"></span></div>
                              <field name="motion_first" class="motion-person" options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('partner_id','in',partner_ids)]"/>
                            </div>
                            <div>
                              <div class="o_form_label"><strong>Motion Second</strong><span class="fa fa-user motion-icon"></span></div>
                              <field name="motion_second" class="motion-person" options="{'no_quick_create': True, 'no_create_edit' : True}" domain="[('partner_id','in',partner_ids)]"/>
                            </div>
                            <field name="open_date"/>
                            <field name="close_date"/>
                            <field name="description"/>
                            <sheet class="switchButtons">
                                   <div class="oe_button_box oe_edit_only" name="button_box">
                                       <strong>Enable Discussion </strong>
                                     <button name="discussion_value" type="object" class="oe_stat_button btn btn-primary">
                                         <field name="enable_discussion" widget="boolean_button" options='{"terminology": "True"}'/>
                                     </button>
                                 </div>

                                        <div class="oe_button_box oe_edit_only" name="button_box">
                                            <strong>Results Visible To All </strong>
                                     <button name="public_value" type="object" class="oe_stat_button btn btn-primary">
                                         <field name="public_visibility" widget="boolean_button" options='{"terminology": "True"}'/>
                                     </button>
                                 </div>

                                    <div class="oe_button_box oe_edit_only" name="button_box">
                                        <strong>Signature Required  </strong>
                                     <button name="signature_value" type="object" class="oe_stat_button btn btn-primary">
                                         <field name="signature_required" widget="boolean_button" options='{"terminology": "True"}'/>
                                     </button>
                                 </div>
                              </sheet>
                        </group>
                        <div class="oe_read_only voting_choice_container" attrs="{'invisible' : [('voting_type_id', '=', False)]}">
                            <div class="vote_options acceptance_buttons_new">
                            </div>
                        </div>
                        <div>
                            <field name="signature_data" class="oe_read_only" widget='signature' domain="[('user_id.id','=',uid)]"/>
                        </div>
                        <div class="oe_read_only results_container">
                            <a href="#" class="btn btn-primary viewGraphically">View Results (Graphical) </a>
                            <div class="results"/>
                            <field invisible="1" class="graphical_view_url" name="graphical_view_url"/>
                        </div>
                        <field class="kanban_document dn_attatchment_btn" name="document_ids" context="{'kanban_view_ref': 'dn_documents.dn_docs_kanban','form_view_ref': 'dn_documents.doc_edit_form'}" mode="kanban"/>
                        <app-comments class="app-com" attrs="{'invisible': [('enable_discussion','=',False)]}"/>
                    </sheet>

                    <script src="/meeting_point/static/js/voting.js"/>
                </form>
            </field>
        </record>

        <record id="meeting_point_voting_kanban" model="ir.ui.view">
            <field name="name">meeting.point.voting.kanban</field>
            <field name="model">meeting_point.voting</field>
            <field name="arch" type="xml">
                <kanban default_order="name">
                    <field name="name"/>
                    <field name="voting_type_id"/>
                    <field name = 'my_status'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="kantainer" style="padding:0">
                                <a type="object" name="open_same_window" class="oe_module_desc kanban_a">
                                    <h2><field name="name"/></h2>
                                    <t t-if="record.meeting_id.raw_value">
                                        <h3>Type: <field name="voting_type_id"/></h3>
                                    </t>
                                    <t t-if="record.meeting_id.raw_value">
                                        <h4>Meeting: <field name="meeting_id"/></h4>
                                    </t>
                                    <t t-if="record.topic_id.raw_value">
                                        <h4>Topic: <field name="topic_id"/></h4>
                                    </t>
                                </a>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_meeting_voting" model="ir.actions.act_window">
            <field name="name">Voting</field>
            <field name="res_model">meeting_point.voting</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>
        <record id="action_voting_kanban_manager_he" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_meeting_voting"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="meeting_point_voting_kanban"/>
            </record>
        <record id="action_voting_form_manager_he" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_meeting_voting"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_form_voting"/>
        </record>




        <record id="action_meeting_voting_type" model="ir.actions.act_window">
            <field name="name">Voting Types</field>
            <field name="res_model">meeting_point.votingtype</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_option" model="ir.actions.act_window">
            <field name="name">Voting Type Options</field>
            <field name="res_model">meeting_point.votingoption</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_answer" model="ir.actions.act_window">
            <field name="name">Voting Answers</field>
            <field name="res_model">meeting_point.votinganswer</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <record id="action_meeting_voting_document" model="ir.actions.act_window">
            <field name="name">Voting Documents</field>
            <field name="res_model">meeting_point.votingdocument</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>

        <menuitem
                name="Approval/Voting" id="menu_meeting_voting"
                parent="menu_root_settings"
                action="action_meeting_voting"
        />

        <menuitem
                name="Voting Types" id="menu_meeting_voting_type"
                action ="action_meeting_voting_type"
                parent="devmenu"
        />

        <menuitem
                name="Voting Type Options" id="menu_meeting_voting_option"
                action ="action_meeting_voting_option"
                parent="devmenu"
        />

        <menuitem
                name="Voting Answers" id="menu_meeting_voting_answer"
                action ="action_meeting_voting_answer"
                parent="devmenu"
        />

        <menuitem
                name="Voting Documents" id="menu_meeting_voting_document"
