        <record id="email_template_approval_modified" model="mail.template">
            <field name="name">approval Template MeetVUE</field>
            <field name="model_id" ref="model_survey_survey" />
            <field name="subject">${object.name} invitation</field>
             <field name="email_to" >${ctx['emailTo']|safe}</field>
            <field name="auto_delete" eval="True" />
            <field name="body_html">
                <![CDATA[
