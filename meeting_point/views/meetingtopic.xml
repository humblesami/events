<odoo>
    <data>

        <record id="view_meetingtopic_form" model="ir.ui.view">
            <field name="name">meeting_point.topic.form</field>
            <field name="model">meeting_point.topic</field>
            <field name="arch" type="xml">
                <form class="meetingtopic meetingtopicform">
                    <group>
                        <field name="name" string="Title" required="1" />
                        <field name="lead" />
                        <field name="duration" widget="float_time" required="1" class="topic_duration dn_time_picker" />
                        <field name="content" />
                        <field name="document_ids" mode="kanban" class="o2m_kanban topic_docs kanban_document"
                               context="{'form_view_ref' : 'meeting_point.view_meeting_doc_form','kanban_view_ref': 'dn_documents.dn_docs_kanban_annotator'}"
                        />

                        <div class="oe_read_only o2m_kanban">
                            <h4>Approval/Voting</h4>
                            <field name="voting_ids" string=" " mode="kanban">
                            </field>
                        </div>
                    </group>
                    <script type="application/javascript" src="/meeting_point/static/js/meetingtopic.js"></script>
                </form>
            </field>
        </record>

         <record id="view_topicdoc_default_annotator" model="ir.ui.view">
            <field name="name">topic.doc.default.annotator</field>
            <field name="model">meeting_point.topicdoc</field>
            <field name="inherit_id" ref="dn_documents.doc_annotator_form"/>
            <field name="mode">primary</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <div></div>

            </field>
        </record>

        <record id="meeting_topic_kanban" model="ir.ui.view">
            <field name="name">meeting.topic.kanban</field>
            <field name="model">meeting_point.topic</field>
            <field name="arch" type="xml">
                <kanban default_order="sequence">
                    <field name="name"/>
                    <field name="lead"/>
                    <field name="duration"/>
                    <field name="document_ids"/>
                   <templates>
                        <t t-name="kanban-box">
                            <div class="kantainer" style="padding:0">
                                <a type="object" name="open_same_window" class="kanban_a oe_module_desc">
                                    <div class="oe_module_desc">
                                        <div style="font-weight:bold">
                                            <field name="name"/>
                                        </div>
                                        <t t-if="record.lead.raw_value">
                                            <div>Lead: <field name="lead"/> </div>
                                        </t>
                                        <div>Duraion: <field  type="string"  widget="float_time" name="duration"/></div>
                                        <!--<div t-if="record.attachments.raw_value == 'available'" t-as="doc">-->
                                            <!--Attachments: <span class="fa fa-2x fa-file-text" />-->
                                        <!--</div>-->
                                         <!--<div t-if="record.actions.raw_value == 'available'" t-as="doc">-->
                                            <!--Actions: <span class="fa fa-2x fa-file-text" />-->
                                        <!--</div>-->
                                    </div>
                                </a>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_meetingtopic_tree" model="ir.ui.view">
            <field name="name">meeting_point.topic.tree.admin</field>
            <field name="model">meeting_point.topic</field>
            <field name="arch" type="xml">
                <tree class="meetingtopic_tree">
                    <field name="sequence" widget="handle"/>
                    <field name="name" string="Title"  />
                    <field name="lead"  />
                    <field name="duration" class="topic_duration_span "
                           type="string"  widget="float_time"  />
                    <field name="attachments" string="Attachment(s)"></field>
                </tree>
            </field>
        </record>


        <record id="action_topic_meeting" model="ir.actions.act_window">
            <field name="name">MeetingTopics</field>
            <field name="res_model">meeting_point.topic</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>