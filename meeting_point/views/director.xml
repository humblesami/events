<odoo>
    <data>
        <record id="meeting_point_director_form" model="ir.ui.view">
            <field name="name">meeting.point.director.form</field>
            <field name="model">meeting_point.users</field>
            <field name="inherit_id" ref="meeting_point.meeting_point_user_form"/>
            <field name="mode">primary</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='job_id']" position="after">
                    <field class="director_only_1" name="companies"/>
                    <field class="director_only_2" name="board_joing_date"/>
                </xpath>

                <xpath expr="//group[@name='committee_ids']" position="after">
                    <div name="director_only_3">
                    <hr/>
                    <group>
                        <field name="bio"/>
                        <field name="resume"/>
                    </group>
                    <hr/>
                    <h2 style="color:#3498DB">Administrative Assistant</h2>
                    <field name="admin_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h3>
                            <field name="admin_first_name" placeholder="First Name" style="width:auto;margin-right:10px"/>
                            <field name="admin_last_name" placeholder="Last Name" style="width:auto"/>
                        </h3>
                        <h3/>
                        <h3>
                            <field name="admin_nick_name" placeholder="Nick Name" style="width: auto"/>
                        </h3>
                    </div>
                    <group col="4">
                        <field name="admin_email" string="E-Mail"/>
                        <field name="mail_to_assistant" string="Grant E-Mail Access:"/>
                        <field class="masked_input phone" name="admin_cell_phone" string="Cell Phone"/>
                        <field class="masked_input phone" name="admin_work_phone" string="Work Phone"/>
                        <field name="admin_fax"/>
                    </group>
                    <hr/>
                    </div>
                    <script>
                    $(function(){
                        if($('.o_form_buttons_view button').length == 2)
                            $('.o_form_buttons_view').show();

                    });
                    </script>
                </xpath>
            </field>
        </record>


        <record id="meeting_point_director_kanban" model="ir.ui.view">
            <field name="name">meeting.point.director.kanban</field>
            <field name="model">meeting_point.users</field>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban" default_order="name">
                    <field name="message_is_follower"/>
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="id"/>
                    <field name="message_needaction_counter"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('meeting_point.users', 'image_medium', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <!--<li id="last_login"/>-->
                                        <!--<li t-if="record.job_id.raw_value">-->
                                            <!--<field name="job_id"/>-->
                                        <!--</li>-->
                                        <!--<li t-if="record.work_location.raw_value">-->
                                            <!--<field name="work_location"/>-->
                                        <!--</li>-->
                                        <li t-if="record.companies.raw_value">
                                            <i class="fa fa-group"/>
                                            <strong><field name="companies"/></strong>
                                        </li>
                                        <li t-if="record.work_phone.raw_value">
                                            <i class="fa fa-phone"/>
                                            <field name="work_phone" />
                                        </li>
                                        <li t-if="record.login.raw_value">
                                            <i class="fa fa-envelope"/>
                                            <field name="login" widget="url"/>
                                        </li>
                                        <!--<li t-if="record.mobile_phone.raw_value">-->
                                            <!--<i class="fa fa-mobile"/>-->
                                            <!--<field name="mobile_phone"/>-->
                                        <!--</li>-->
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="action_director" model="ir.actions.act_window">
            <field name="name">Directors</field>
            <field name="res_model">meeting_point.users</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="meeting_point_user_kanban"/>
            <field name="domain">[('groups_id.category_id.name','=','MeetingPoint'),('groups_id.name','=','Director')]</field>
            <field name="context">{'dn_users_menu':True,'mp_director_menu':True}</field>
            <!--<field name="search_view_id" ref="view_calendar_event_search"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a Director.
                </p>
            </field>
        </record>
        <record id="action_director_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_director"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="meeting_point_user_kanban"/>
        </record>
        <record id="action_director_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_director"/>
            <field name="sequence" eval="21"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="meeting_point_director_form"/>
        </record>

                <record id="view_my_profile" model="ir.ui.view">
            <field name="name">my.profile</field>
            <field name="model">meeting_point.users</field>
            <field name="inherit_id" ref="meeting_point_director_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="before">
                    <button name="preference_change_password" type="object"
                            string="Change My Password" class="btn-primary"
                            attrs="{'invisible': [('own_profile','=',False)]}"
                    />
                    <group name="preferences" col="4">
                        <field name="lang" readonly="0"/>
                        <field name="tz" widget="timezone_mismatch" options="{'tz_offset_field': 'tz_offset'}" readonly="0"/>
                        <field name="tz_offset" invisible="1"/>
                        <field name="company_id" options="{'no_create': True}" readonly="0" groups="base.group_multi_company"/>
                    </group>
                </xpath>
                 <xpath expr="//field[@class='director_only_1']" position="attributes">
                     <attribute name="groups">meeting_point.group_meeting_director</attribute>

                </xpath>
                   <xpath expr="//field[@class='director_only_2']" position="attributes">
                     <attribute name="groups">meeting_point.group_meeting_director</attribute>

                </xpath>

                  <xpath expr="//div[@name='director_only_3']" position="attributes">
                     <attribute name="groups">meeting_point.group_meeting_director</attribute>

                </xpath>
                 <xpath expr="//div[@name='access_groups']" position="replace">


                </xpath>
                   <xpath expr="//field[@name='committee_ids']" position="attributes">
                       <attribute name="readonly">1</attribute>

                </xpath>

            </field>
        </record>


    </data>
</odoo>