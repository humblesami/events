<odoo>
    <data>

        <record id="meeting_point_committee_kanban" model="ir.ui.view">
            <field name="name">meeting.point.committee.kanban</field>
            <field name="model">meeting_point.committee</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette oe_kanban_global_click">
                                <div class="oe_module_desc">
                                    <div class="o_hidden committee_id">
                                        <field name="id" />
                                    </div>
                                    <h2>
                                        <field name="name"/>
                                    </h2>
                                    <field name="summary" widget="html" />
                                     <field  name="members_html" widget="html"/>

                                </div>
                                <script src="/meeting_point/static/js/committee_kanban.js" />
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="meeting_point_committee_form" model="ir.ui.view">
            <field name="name">meeting.point.committee.form</field>
            <field name="model">meeting_point.committee</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" modifiers="{'required': true}" string="Committee Name"/>
                            <field name="summary" string="Charter"></field>
                            <field name="allUser" type="checkbox" />
                           <field name="user_ids" widget="many2many_kanban">
                             <kanban quick_create="false" create="false" delete="true">
                                 <field name="name"/>
                                 <field name="image_small"/>
                                 <templates>
                                     <t t-name="kanban-box">
                                         <div class="oe_kanban_global_click" style="position: relative;width:100px">
                                             <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
                                             <div class="oe_module_vignette">
                                                 <img t-att-src="kanban_image('meeting_point.users', 'image_small', record.image_small.value)" class=" oe_avatar  oe_kanban_avatar_smallbox oe_kanban_image"/>
                                                 <div class="oe_module_desc">
                                                     <field name="name"/>
                                                 </div>
                                             </div>
                                         </div>
                                     </t>
                                 </templates>
                             </kanban>
                        </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_committee" model="ir.actions.act_window">
            <field name="name">Committees</field>
            <field name="res_model">meeting_point.committee</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="meeting_point_committee_kanban"/>
            <!--<field name="domain">[('x_parent_id','=',False)]</field>-->
            <!--<field name="search_view_id" ref="view_calendar_event_search"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a Committee.
                </p>
                <!--<p>-->
                <!--The calendar is shared between employees and fully integrated with-->
                <!--other applications such as the employee holidays or the business-->
                <!--opportunities.-->
                <!--</p>-->
            </field>
        </record>
        <record id="action_committee_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_committee"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="meeting_point_committee_kanban"/>
        </record>
        <record id="action_committee_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_committee"/>
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="meeting_point_committee_form"/>
        </record>

    </data>
</odoo>