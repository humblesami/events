<odoo>
    <data>
        <record id="resource_folder_kanban" model="ir.ui.view">
            <field name="name">resource.folder.kanban</field>
            <field name="model">meeting_point.folder</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_semantic_html_override  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}} oe_kanban_action">
                                <div class="kanban_del">
                                    <a type="delete"
                                       groups="meeting_point.group_meeting_admin">Delete</a>
                                </div>
                                <div class="oe_clear"/>
                                <div class="oe_kanban_bottom_right">
                                    <a>
                                        <img
                                             width="65" height="65" style="padding:0px;" class=""
                                             src="http://icons.iconarchive.com/icons/papirus-team/papirus-places/512/folder-green-icon.png"/>
                                    </a>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    <h3>
                                        <field name="name"/>
                                    </h3>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="resource_folder_form" model="ir.ui.view">
            <field name="name">resource.folder.form</field>
            <field name="model">meeting_point.folder</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h5>Folder Name</h5>
                        <field name="name"/>
                        <div groups="meeting_point.group_meeting_admin">
                            <h5>Access Rights:</h5>
                            <field name="partners" groups="meeting_point.group_meeting_admin" widget="many2many_tags" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                        </div>
                        <div class="oe_edit_only">
                            <h6>All Users:</h6>
                            <field name="allUser" type="checkbox" />
                        </div>
                        <div class="files">
                            <!--<span class="o_hidden modal-name" modal_name="meeting_point.all_files"></span>-->
                            <h5>Files:</h5>
                            <field class="kanban_document dn_attatchment_btn" name="file_ids"
                               context="{'kanban_view_ref': 'dn_documents.dn_docs_kanban'
                               }"
                               mode="kanban">
                            <form>
                                <!--<field name="x_parent_partners"></field>-->
                                <h5>Name:</h5>
                                <field name="name"/>
                                <h5>Attachment:</h5>
                                <field name="filename" invisible="1"/>
                                <field name="attachment" filename="filename"/>
                            </form>
                        </field>
                        </div>

                        <div class="sub_folders">
                            <h5>Sub Folders:</h5>
                            <field name="sub_folders" mode="kanban"
                                   context="{'form_view_ref' : 'meeting_point.sub_folder_form' }">
                            </field>
                        </div>
                    </sheet>
                    <!--<script src="/dn_base/static/js/attach.js"/>-->
                    <script>
                        $('.kanban_document button.o-kanban-button-new').html("Attach");
                    </script>
                </form>
            </field>
        </record>

        <record id="sub_folder_form" model="ir.ui.view">
            <field name="name">subfolder.folder.form</field>
            <field name="model">meeting_point.folder</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h5>Folder Name</h5>
                        <field name="name"/>
                        <div class="files">
                        <h5>Files:</h5>
                            <field class="kanban_document dn_attatchment_btn" name="file_ids" context="{'kanban_view_ref': 'meeting_point.view_meeting_doc_kanban'}" mode="kanban">
                                <form>
                                    <h5>Name:</h5>
                                    <field name="name"/>
                                    <h5>Attachment:</h5>
                                    <field name="filename" invisible="1"/>
                                    <field name="attachment" filename="filename"/>
                                </form>
                            </field>
                        </div>
                        <div class="sub_folders">
                            <h5>Sub Folders:</h5>
                            <field name="sub_folders" mode="kanban"
                                   context="{'form_view_ref' : 'meeting_point.sub_folder_form' }">
                            </field>
                        </div>
                    </sheet>
                    <!--<script src="/dn_base/static/js/attach.js"/>-->
                    <script>
                        $(function () {
                            $('.kanban_document button.o-kanban-button-new').html("Attach");
                        });
                    </script>
                </form>
            </field>
        </record>




        <record id="action_resource_folder" model="ir.actions.act_window">
            <field name="name">Resource</field>
            <field name="res_model">meeting_point.folder</field>
            <field name="view_mode">kanban,form</field>
            <field name="view_id" ref="resource_folder_kanban"/>
            <field name="domain">[('parent_folder','=',False)]</field>
            <!--<field name="search_view_id" ref="view_calendar_event_search"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new folder.
                </p>
                <!--<p>-->
                <!--The calendar is shared between employees and fully integrated with-->
                <!--other applications such as the employee holidays or the business-->
                <!--opportunities.-->
                <!--</p>-->
            </field>
        </record>

        <record id="action_resource_folder_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_resource_folder"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="resource_folder_kanban"/>
        </record>

        <record id="action_resource_folder_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_resource_folder"/>
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="resource_folder_form"/>
        </record>

    </data>
</odoo>