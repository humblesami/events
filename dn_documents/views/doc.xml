<odoo>
    <data>
        <record id="view_dn_doc_tree" model="ir.ui.view">
            <field name="name">dndoc.tree</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="arch" type="xml">
                <tree>
                    <button class = "btn btn-primary btn-sm" type="object" name="open_view_doc_form" string="Doc"/>
                </tree>
            </field>
        </record>

        <record id="dn_docs_kanban" model="ir.ui.view">
            <field name="name">dn_documents.doc.kanban</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="arch" type="xml">
                <kanban class="documents">
                    <!--<field name="name"/>-->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="doc_element oe_kanban_global_click" groups="dn_base.group_dn_app_manager">
                                <div name="kanban_del" class="kanban_del">
                                    <a type="delete" groups="meeting_point.group_meeting_admin">Delete</a>
                                </div>
                                <div style="display:none;" class="dn_doc_id">
                                   <field name="id"/>
                                </div>
                                <div class="oe_module_desc">
                                    <div name="open_sign_doc">
                                        <button type="object" class="fa fa-5x fa-file" name="open_view_doc_form">
                                                </button>
                                    </div>

                                    <div t-attf-class="oe_kanban_content">
                                        <h2 name="name">
                                            <field name="name"/>
                                        </h2>
                                    </div>
                                </div>
                            </div>
                            <div class="doc_element" groups="!dn_base.group_dn_app_manager">
                                <div name="kanban_del1" class="kanban_del">
                                    <a type="delete" groups="meeting_point.group_meeting_admin">Delete</a>
                                </div>
                                <div style="display:none;" class="dn_doc_id">
                                   <field name="id"/>
                                </div>
                                <div class="oe_module_desc">
                                    <div name="open_sign_doc1">
                                        <button type="object" t-att-myatr="open_doc" class="fa fa-5x fa-file" name="open_view_doc_form">
                                                </button>
                                    </div>
                                    <div t-attf-class="oe_kanban_content">
                                        <h2 name="name1">
                                            <field name="name"/>
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="doc_edit_form" model="ir.ui.view">
            <field name="name">dn_documents.edit.form</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form>
                    <h4>Title</h4>
                    <field name="name" class="doc_name" string="Title"/>
                    <field name="filename" invisible="1"/>
                    <h4>Attachment</h4>
                    <field name="attachment" filename="filename" class="dn_documents_docs_upload oe_edit oe_edit_only"/>
                </form>
            </field>
        </record>

        <record id="doc_view_only_form" model="ir.ui.view">
            <field name="name">dn_documents.document.view_only.form</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
               <form create="false" class="doc_view_form" edit="false">
                    <link rel="stylesheet" href="/dn_documents/static/css/doc.css"/>
                   <field name="id" class="dn_doc_id o_hidden"/>
                    <field name="attachment" filename="filename" readonly="1" class="doc_download"/>
                    <field name="path" class="dn_documents_doc_path" invisible="1"/>
                    <field name="filename" invisible="1"/>
                    <field name="html" class="meeting_doc_html" readonly="1" invisible="1"/>

                    <div id="holder" style="position:relative;text-align: center;background-color: rgb(82, 86, 89);">
                        <div class="top_btns">
                            <div class="PdfTopBtnsWrapper">
                                <div class="btn  btn-sm doc_btn fa fa-chevron-left" id="prev"/>
                                <div class="btn  btn-sm doc_btn fa fa-chevron-right" id="next"/>
                                <span class="pg_no"> <span style="font-weight: bold;" id="page_num"/> / <span id="page_count"/></span>
                                <div class="btn btn-sm doc_btn fa fa-minus" id="zoomOut" title="Zoom Out"/>
                                <div class="btn btn-sm doc_btn fa fa-plus" id="zoomIn" title="Zoom In"/>
                                <span style="display: inline-block;" id="scaleSelectContainer">
                                    <select data-style="btn-primary" id="scaleSelect" title="Zoom" tabindex="23">
                                        <option title="" value="0.5">50%</option>
                                        <option title="" value="0.75">75%</option>
                                        <option title="" value="1">100%</option>
                                        <option title="" value="1.25">125%</option>
                                        <option title="" value="1.5">150%</option>
                                        <option title="" value="2">200%</option>
                                        <option title="" value="3">300%</option>
                                        <option title="" value="4">400%</option>
                                    </select>
                                </span>
                                <field name="original_pdf" groups="!dn_base.group_dn_app_manager"   readonly="1" class="pdf_download"/>
                                 <field name="pdf_doc" groups="dn_base.group_dn_app_manager"  readonly="1" class="pdf_download"/>
                            </div>

                        </div>
                        <canvas id="the-canvas"/>

                        <div id="page_container1">

                            <div id="page_container">

                            </div>
                        </div>
                    </div>
                   <!--<script src="/dn_documents/static/js/pdf.js"/>-->
                    <!--<script src="/dn_documents/static/js/pdf.worker.js"/>-->
                    <div name="view_script">
                        <script src="/dn_documents/static/js/doc_view.js"/>
                    </div>
                    <script>
                        $('.modal-title:last').append($('.doc_download'));
                    </script>
                </form>
            </field>
        </record>

        <record id="view_dn_doc_form" model="ir.ui.view">
            <field name="name">dndoc.form</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="priority">3</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" string="Title" />
                        <field name="filename" invisible="1"/>
                        <field name="attachment" filename="filename" />
                    </group>
                </form>
            </field>
        </record>

        <record id="pdf_doc_view" model="ir.ui.view">
            <field name="name">dn_documents.pdf_doc_view.form</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="priority">9</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <div id="pdf_div"></div>
                    <script id="doc_js" src="/dn_documents/static/js/doc.js"/>
               </form>
            </field>
        </record>

        <record id="view_dn_documents_doc_tree" model="ir.ui.view">
            <field name="name">dn_documents.document.tree</field>
            <field name="model">dn_documents.allfiles</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Doc Title" />
                    <button type="object" name="open_view_doc_form"
                            class="fa fa-5x fa-file" />
                </tree>
            </field>
        </record>

        <record id="action_dn_documents_doc" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">dn_documents.allfiles</field>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem
                id="menu_dn_documents"
                name="Documents"
                web_icon="dn_documents,static/menu_icons/icon.png"
                action="action_dn_documents_doc"
                groups="group_doc_specialist"
        />




    </data>
</odoo>