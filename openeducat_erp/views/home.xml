        <record id="view_openedu_home_form" model="ir.ui.view">
            <field name="name">openedu.home.form</field>
            <field name="model">openeducat.home</field>
            <field name="sequence" eval="3"/>
            <field name="arch" type="xml">
                <form>
                    <style>
                        .o_cp_left{
                        display:none!important
                        }
                        .o_cp_right{
                        display:none!important
                        }
                        #calendar{
                        margin:10px
                        }
                    </style>
                    <notebook>
                        <page string="Calendar" >
                            <div class="top" style="display:inline">
                                <h2 style="display:inline" >Class:</h2>
                                <select  id="dropdown" style="width:25%;display:inline"></select>
                            </div>

                            <div id="calendar"></div>

                        </page>
                    </notebook>


                    <div style="display:none">
                        <field name="session_ids" mode="kanban"/>
                        <field name="sessions"/>
                        <field name="classes"/>
                    </div>

                    <!--<script src="/openeducat_erp/static/js/calendar/fullcalendar.js"></script>-->
                    <!--<script src="/openeducat_erp/static/js/calendar/moment.min.js"></script>-->
                    <link rel="stylesheet" href="/openeducat_erp/static/css/calendar.css"/>
                    <script src="/openeducat_erp/static/js/calendar/calendar.js"></script>
                </form>
            </field>
        </record>



        <record id="action_openedu_home" model="ir.actions.act_window" >
