        <record id="view_openedu_home_form" model="ir.ui.view">
            <field name="name">openedu.home.form</field>
            <field name="model">openeducat.home</field>
            <field name="sequence" eval="3"/>
            <field name="arch" type="xml">
                <form>
                    <style>
                        .o_breadcrumb_full .o_form_button_cancel,.o_breadcrumb_full .o_form_button_save,.o_cp_pager{
                        display:none!important
                        }
                        .o_cp_right{
                        display:none!important
                        }
                        #calendar{
                        margin:10px
                        }
                        div[name="faculty_ids"] td
                        {
                        white-space: pre;

                        }
                    </style>
                    <notebook>
                        <page string="Calendar">

                            <group class="calendar_filters" col="6">
                                <field name="fltr_class"/>
                                <field name="fltr_tchr"/>
                                <field name="fltr_course"/>
                            </group>

                            <div id="calendar"/>

                        </page>
                        <page string="Planner">
                            <group col="4" name="main">
                                <field name="course_id"/>
                                <field name="branch_id"/>



                            </group>
                            <div class="tables_div" style="border: solid 1px gainsboro;border-radius: 5px;margin:10px">
                                <h2 style="     background: gainsboro;     padding: 5px;     margin: 0px; ">Faculty availability and Scheduled classes</h2>
                                <group class="oe_edit_only">
                                    <field name="faculty_ids" nolabel="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="availaible"/>

                                        </tree>
                                    </field>
                                </group>

                                <group class="oe_edit_only">



                                    <field name="class_ids" nolabel="1">
                                        <tree>
                                            <field name="name"/>
                                            <field name="faculty_id"/>
                                            <field name="class_start"/>
                                            <field name="class_end"/>
                                            <field name="start"/>
                                            <field name="end"/>
                                            <field name="total_sched_hrs" widget="float_time"/>
                                            <field name="total_avail_hrs" widget="float_time"/>
                                        </tree>
                                    </field>
                                </group>
                            </div>
                            <group string="Terms">

                                <field name="term_ids" nolabel="1"/>
                            </group>
                            <!--<h3 style="color:#00a09d">Required hours: <field class="badge" name="total_instr_hrs" widget="float_time"/></h3>-->
                            <group col="4">
                                <field name="start" widget="float_time" required="1" class="dn_time_picker"/>
                                <field name="end" widget="float_time" required="1" class="dn_time_picker"/>
                                <field name="days" widget="many2many_tags"/>

                            </group>

                            <group string="Available Teachers and Rooms">
                                <group string="Available Teachers">

                                    <field name="avail_faculty_ids" context="{'get_parent_batch':1}" mode="kanban" nolabel="1"/>
                                </group>

                                <group string="Available Rooms">

                                    <field name="avail_room_ids" nolabel="1"/>
                                </group>


                            </group>

                        </page>
                        <page string="Teacher and Room Capacity">
                            <group col="4">
                                <field name="filter_start"/>
                                <field name="filter_end"/>
                            </group>


                            <div class="tables_div" style="border: solid 1px gainsboro;border-radius: 5px;margin:10px">
                                <h2 style="     background: gainsboro;     padding: 5px;     margin: 0px; ">Teachers</h2>
                                <group>
                                    <field name="course"/>

                                </group>
                                <div> <field name="teachers" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="total_sched_hrs1" sum="Total scheduled"/>
                                        <field name="total_avail_hrs1" sum="Total available"/>

                                    </tree>

                                </field></div>

                            </div>

                            <div class="tables_div" style="border: solid 1px gainsboro;border-radius: 5px;margin:10px">
                                <h2 style="     background: gainsboro;     padding: 5px;     margin: 0px; ">Rooms</h2>
                                <group>
                                    <field name="branch"/>

                                </group>
                                <field name="rooms">
                                    <tree>
                                        <field name="name"/>
                                        <field name="branch_id"/>
                                        <field name="total_sched_hrs" sum="Total scheduled"/>
                                        <field name="total_avail_hrs" sum="Total available"/>

                                    </tree>
                                </field>
                            </div>
                        </page>
                        <page string="Projections">

                            <group string="Select courses and fee for projections">

                                <field name="forecast_ids" nolabel="1"/>
                            </group>

                            <div class="tables_div" style="border: solid 1px gainsboro;border-radius: 5px;margin:10px">
                                <h2 style="     background: gainsboro;     padding: 5px;     margin: 0px; ">Projections</h2>

                                <field name="projected_classes">

                                </field>
                            </div>


                        </page>
                    </notebook>


                    <div style="display:none">
                        <field name="session_ids" mode="kanban"/>
                        <field name="sessions"/>
                        <field name="classes"/>
                    </div>

                    <!--<script src="/openeducat_erp/static/js/calendar/fullcalendar.js"></script>-->
                    <!--<script src="/openeducat_erp/static/js/calendar/moment.min.js"></script>-->
                    <link rel="stylesheet" href="/openeducat_erp/static/css/calendar.css"/>
                    <script src="/openeducat_erp/static/js/calendar/calendar.js"/>
                </form>
            </field>
        </record>



