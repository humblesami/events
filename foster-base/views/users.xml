<odoo>
    <data>
        <record id="foster_user_kanban" model="ir.ui.view">
            <field name="name">foster.user.kanban</field>
            <field name="model">foster.users</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban class="o_hr_employee_kanban" default_order="name">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('foster.users', 'image_medium')"/>
                                </div>
                                <div class="oe_module_desc">
                                    <field name="name"/>
                                </div>
                                <ul>
                                    <li t-if="record.work_phone.raw_value">
                                            <i class="fa fa-phone"/>
                                            <field name="work_phone" />
                                        </li>
                                        <li t-if="record.login.raw_value">
                                            <i class="fa fa-envelope"/>
                                            <field name="login" widget="email"/>
                                        </li>
                                </ul>

                            </div>
                        </t>
                    </templates>
                </kanban>

            </field>
        </record>

        <record id="view_foster_users_tree" model="ir.ui.view">
            <field name="name">foster.users.tree</field>
            <field name="model">foster.users</field>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="name"/>
                    <field name="login"/>
                </tree>
            </field>
        </record>


        <record id="foster_management_user_form" model="ir.ui.view">
            <field name="name">foster.user.form</field>
            <field name="model">foster.users</field>
            <field name="inherit_id" ref="dn_base.dn_base_user_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//h2[@name='login']" position="after">
                    <!--<group>-->
                        <!--<field name="send_email"/>-->
                    <!--</group>-->
                    <h4>Access Groups</h4>
                    <field name="groups_id" widget="many2many_checkboxes" domain="[('category_id.name','=','FosterManagement')]" />
                    <group>
                        <field name="work_phone" class="phone masked_input"/>
                        <field name="mobile_phone" class="phone masked_input"/>
                        <field name="website"/>
                        <field name="fax"/>
                        <field name="bio"/>
                        <field name="resume"/>
                    </group>

                </xpath>
            </field>
        </record>


        <record id="action_foster_users" model="ir.actions.act_window">
            <field name="name">Foster Users</field>
            <field name="res_model">foster.users</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="foster_user_kanban"/>
            <field name="domain">
                [('groups_id.category_id.name','=','FosterManagement')]
            </field>
            <field name="context">{'dn_users_menu':True}</field>

        </record>

        <record id="action_foster_user_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_foster_users"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="foster_user_kanban"/>
        </record>

        <record id="action_foster_user_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_foster_users"/>
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="foster_management_user_form"/>
        </record>

        <menuitem
                name="Foster Users" id="menu_main_foster_users"
                parent="foster_management_menu_root"
                sequence="5"
        />
         <!--<menuitem-->
                <!--id="menu_foster_all_users"-->
                <!--parent="menu_main_foster_users"-->
                <!--name="All Users"-->
                <!--sequence="6"-->
                <!--action="action_foster_users"-->
        <!--/>-->

    </data>
</odoo>