<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_session_form_inherit" model="ir.ui.view">
            <field name="name">op.session.form.inherit</field>
            <field name="model">op.session</field>
            <field name="inherit_id" ref="openeducat_timetable.view_op_session_form" />
            <field name="arch" type="xml">
                <sheet position="inside">
                     <h2>Attendance: <field name="attendance_state" readonly="1" class="badge" invisible="0"/></h2>
                    <group>

                        <button type="object" name="action_confirm"
                                string="Submit" attrs="{'invisible': [('attendance_state', '!=', 'draft')]}"
                                groups="openeducat_core.group_op_faculty"
                                class="oe_highlight" />
                        <button type="object" name="action_draft"
                                 string="Draft" attrs="{'invisible': [('attendance_state', '!=', 'done')]}"
                                groups="openeducat_core.group_op_faculty"
                                class="oe_highlight" />
                        <field name="attendance_line" colspan="4" nolabel="1">
                            <tree string="Attendance Line" editable="top">
                                <field name="student_id" domain="[('course_detail_ids.course_id','=',parent.course_id),('course_detail_ids.batch_id','=',parent.batch_id)]"/>
                                <field name="present"/>
                                <field name="remark"/>
                                <!--<field name="state"/>-->
                            </tree>
                        </field>
                        <field name="total_present"/>
                        <field name="total_absent"/>
                    </group>
                </sheet>


            </field>
        </record>

        <record id="view_op_session_tree_inherit" model="ir.ui.view">
            <field name="name">op.session.tree.inherit</field>
            <field name="model">op.session</field>
            <field name="inherit_id" ref="openeducat_timetable.view_op_session_tree" />
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <button string="Attendance" type="object" name="open_session_form"/>
                </field>



            </field>
        </record>


    </data>
</odoo>
