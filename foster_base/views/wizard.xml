<data>
    <odoo>
        <!--family resource-->
        <record id="foster_report_view" model="ir.ui.view">
            <field name="name">Foster Report</field>
            <field name="model">foster.wizards</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="allUser" type="checkbox"/>
                        <field name="foster_id" widget="many2many_tags" />
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_foster_wizard" model="ir.actions.act_window">
            <field name="name">Generate Fosters Report</field>
            <field name="res_model">foster.wizards</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="foster_report_view"/>
            <field name="target">new</field>
        </record>

        <!--<menuitem id="sale_pdf_report" name="PDF Reports" parent="sales_team.menu_sale_report" sequence="20"/>-->
        <!--<menuitem id="sale_saleperson_report" name="Salesperson" action="action_salesperson_wizard" parent="sales_report.sale_pdf_report" sequence="10"/>-->
        <!---->
        <menuitem
                name="Foster Report"
                parent="foster_management_menu_root"
                id="menu_foster_report_summary"/>

        <menuitem
                name="Family Resource Reports"
                parent="menu_foster_report_summary"
                action="action_foster_wizard"
                id="menu_foster_summary"/>


        <!--Child Placement-->
         <record id="child_report_view" model="ir.ui.view">
            <field name="name">Child Report</field>
            <field name="model">child.placement.wizards</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="allUser" type="checkbox"/>
                        <field name="child_id" widget="many2many_tags" />
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_child_wizard" model="ir.actions.act_window">
            <field name="name">Generate Child Report</field>
            <field name="res_model">child.placement.wizards</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="child_report_view"/>
            <field name="target">new</field>
        </record>

        <menuitem
                name="Child Reports"
                parent="menu_foster_report_summary"
                action="action_child_wizard"
                id="menu_child_summary"/>

    </odoo>
</data>