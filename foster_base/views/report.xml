<odoo>
    <data>
        <!--Foster Parent report-->
        <report
                id="foster_report"
                model="foster.applicants"
                string="Foster Reports"
                report_type="qweb-html"
                name="foster_base.foster_report_invoice"
                file="foster_base.foster_report_invoice"
                menu="False"
        />

        <template id="foster_report_invoice">
            <t t-call="web.html_container">

                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            table {
                            font-family: arial, sans-serif;
                            border-collapse: collapse;
                            width: 100%;
                            }

                            td, th {
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                            }

                            .img-responsive, .thumbnail > img, .thumbnail a > img, .carousel-inner > .item > img, .carousel-inner > .item > a > img {
                              width :200px !important;
                            }
                        </style>
                        <div class="row text-center">
                            <h2>
                                <b>
                                    <span t-field="res_company.name"/>
                                </b>
                            </h2>
                        </div>
                        <div class="row text-center">
                            <h2>
                                <strong>Report title</strong>
                            </h2>
                        </div>
                        <table>
                            <tr>
                                <th>Foster Applicant</th>
                                <th>Partner</th>
                                <th>Pets</th>
                                <th>Family Members</th>
                                <th>Other Living Members</th>
                                <th>Signature</th>
                            </tr>
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td>
                                        <span t-field="o.first_name"/>
                                        <span t-field="o.last_name"/>
                                    </td>
                                    <td>
                                        <t t-foreach="o.patner" t-as="p">
                                        <span t-field="p.spouse_last_name"/><br/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-foreach="o.petss" t-as="h">
                                            <span t-field="h.name"/><br/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-foreach="o.family_members" t-as="a">
                                            <span t-field="a.full_name"/><br/>
                                        </t>
                                    </td>
                                    <td>
                                        <t t-foreach="o.other_living_members" t-as="b">
                                            <span t-field="b.full_name"/><br/>
                                        </t>
                                    </td>
                                    <td>
                                        <span t-if="o.applicant_sign">
                                            <span t-field="o.applicant_sign" t-field-options="{&quot;widget&quot;: &quot;image&quot;}"/>
                                        </span>
                                    </td>
                                </tr>
                            </t>
                        </table>
                        <!--<h4>Applicant signature</h4>-->
                        <!--<span t-if="o.applicant_sign">-->
                        <!--<span t-field="o.applicant_sign" t-field-options='{"widget": "image"}'/>-->
                        <!--</span>-->
                        <!--<h4>Partner signature</h4>-->
                        <!--<span t-if="o.partner_sign">-->
                        <!--<span t-field="o.partner_sign" t-field-options='{"widget": "image"}'/>-->
                        <!--</span>-->
                    </div>
                </t>
            </t>
        </template>

        <!--Child report-->
        <report
                id="child_report"
                model="foster.child"
                string="Child Placement Reports"
                report_type="qweb-html"
                name="foster_base.child_report_invoice"
                file="foster_base.child_report_invoice"
                menu="False"
        />

        <template id="child_report_invoice">
            <t t-call="web.html_container">

                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            table {
                            font-family: arial, sans-serif;
                            border-collapse: collapse;
                            width: 100%;
                            }

                            td, th {
                            border: 1px solid #dddddd;
                            text-align: left;
                            padding: 8px;
                            }
                            .o_report_layout_clean table tbody tr td:last-child{
                                text-align : left !important;
                            }
                        </style>
                        <div class="row text-center">
                            <h2>
                                <b>
                                    <span t-field="res_company.name"/>
                                </b>
                            </h2>
                        </div>
                        <div class="row text-center">
                            <h2>
                                <strong>Report title</strong>
                            </h2>
                        </div>
                        <table>
                            <tr>
                                <th>Child</th>
                                <th>Foster Parents</th>
                                <th>Birth Mother</th>
                                <th>Father</th>
                            </tr>
                            <t t-foreach="docs" t-as="o">
                                <tr>
                                    <td>
                                        <span t-field="o.full_name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.foster_parent"/>
                                    </td>
                                    <td>
                                        <span t-field="o.mother"/>
                                    </td>
                                    <td>
                                       <span t-field="o.father"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>