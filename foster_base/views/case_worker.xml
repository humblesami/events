<odoo>
    <data>
        <record id="action_foster_case_worker" model="ir.actions.act_window">
            <field name="name">Case Workers</field>
            <field name="res_model">foster.users</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="foster_user_kanban"/>
            <!--[('groups_id.category_id.name','=','MeetingPoint'),'|',('groups_id.name','=','Admin'),('groups_id.name','=','Staff')]-->
            <field name="domain">
                [('groups_id.category_id.name','=','FosterManagement'),('groups_id.name','=','Case Worker')]
            </field>
            <field name="context">{'dn_users_menu':True,'mp_case_worker_menu':True, 'user_type':'case_worker'}</field>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a user.
                </p>
            </field>
        </record>

        <record id="action_case_worker_kanban" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_foster_case_worker"/>
            <field name="sequence" eval="1"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="foster_user_kanban"/>
        </record>

        <record id="action_case_worker_form" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="action_foster_case_worker"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="foster_management_user_form"/>
        </record>

        <menuitem
                id="menu_foster_case_worker"
                parent="menu_main_foster_users"
                name="Case Workers"
                sequence="3"
                action="action_foster_case_worker"
        />
    </data>
</odoo>