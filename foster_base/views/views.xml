<odoo>
    <data>
        <record id="foster_applicant_kanban" model="ir.ui.view">
            <field name="name">foster.applicant.kanban</field>
            <field name="model">foster.applicants</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                         <t t-name="kanban-box">
                            <div class="oe_module_vignette oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="foster_management_list">
            <field name="name">foster_management list</field>
            <field name="model">foster.applicants</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="last_name"/>
                    <field name="middle_name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="foster_management_form">
            <field name="name">foster_management form</field>
            <field name="model">foster.applicants</field>
            <field name="arch" type="xml">
                <form>

                    <notebook>
                        <page name="person" string="Preson Details">
                            <notebook>
                                <page string="Own Details">
                                    <group>
                                        <field name = "date"/>
                                    </group>
                                    <group>
                                        <!--<field name="foster_id"/>-->
                                        <field name="last_name" string="Last Name"/>
                                        <field name="first_name"/>
                                        <field name="middle_name"/>
                                        <field name="other_name"/>
                                        <field name="sex"/>
                                        <field name="birthdate"/>
                                        <field name="place_of_birth"/>
                                    </group>
                                    <group>
                                        <label for="address" string="ADDRESS"/>
                                        <field name="address"/>
                                        <field name="town"/>
                                        <field name="country_state"/>
                                        <field name="zip" class="zip masked_input"/>
                                    </group>
                                    <group>
                                        <label for="home_phone" string="TELEPHONE"/>
                                        <field name="home_phone" class="phone masked_input"/>
                                        <field name="work_phone" class="phone masked_input"/>
                                        <field name="cell_phone" class="phone masked_input"/>
                                        <field name="security_number" class="phone masked_input"/>
                                    </group>
                                    <group>
                                        <label for="applicant_email" string="EMAIL ADDRESS"/>
                                        <field name="applicant_email"/>
                                    </group>
                                    <group>
                                        <label for="citizen_ship" string="CITIZENSHIP"/>
                                        <field name="citizen_ship"/>
                                        <field name="immigration"/>
                                    </group>
                                    <group>
                                        <label for="education" string="EDUCATION"/>
                                        <field name="education"/>
                                        <field name="last_grade"/>
                                    </group>
                                    <group>
                                        <label for="lang_primary" string="LANGUAGES"/>
                                        <br/><label for="lang_primary" string="Spoken in household"/>
                                        <field name="lang_primary"/>
                                        <field name="lang_other"/>
                                        <label for="comp_primary" string="Written Comprehension"/>
                                        <field name="comp_primary"/>
                                        <field name="comp_other"/>
                                    </group>

                                    <group>
                                        <label for="note" string="NOTES"/>
                                        <field name="note"/>
                                    </group>
                                    <group>
                                        <field name="file"/>
                                    </group>
                                    <group>
                                        <field name="consumer"/>
                                    </group>
                                    <div class="o2m_kanban">
                                      <h4>Foster Documents</h4>
                                        <field name="doc_ids" class="kanban_document" mode="kanban"/>
                                    </div>
                                    <div class="o2m_kanban">
                                      <h4>Signature Documents</h4>
                                        <field name="signature_doc" class="kanban_document" mode="kanban"/>
                                    </div>
                                </page>
                                <page string="Marriage Details">
                                    <group>
                                        <label for="current_marriage_date" string="MARRIAGE"/>
                                        <field name="current_marriage_date"/>
                                        <field name="previous_marriage_date"/>
                                        <field name="previous_marriage_date_end"/>
                                    </group>
                                </page>
                                <page string="Employment Details">
                                    <group>
                                        <label for="employment_type" string="EMPLOYMENT"/>
                                        <field name="employment_type"/>
                                        <field name="days_worked"/>
                                        <field name="date_employment_began"/>
                                        <field name="income_year"/>
                                    </group>
                                    <group>
                                        <label for="employer_name" string="EMPLOYER"/>
                                        <field name="employer_name"/>
                                        <field name="employer_phone" class="phone masked_input"/>
                                    </group>
                                </page>
                                <page string="Housing">
                                    <group>
                                        <label for="house" string="HOUSING"/>
                                        <field name="house"/>
                                        <field name="current_address_period"/>
                                        <field name="name_of_contact"/>
                                        <field name="phone_of_contact"/>
                                        <field name="previous_address"/>
                                    </group>
                                </page>
                                <page string="Emergency Contact">
                                    <label for="emrgency_contact" string="EMERGENCY CONTACT"/><br/>
                                    <p>
                                        Please provide the name and telephone number of person(s) through whom you can be reached in an emergency
                                    </p><br/>
                                    <field name="emrgency_contact"/>
                                </page>
                                <page string="Pets">
                                    <label for="petss" string="PETS IN THE HOME"/>
                                    <field name="petss"/>
                                </page>
                                <page string="Foster History">
                                    <label for = "adoption" string="HISTORY AS FOSTER CARE OR ADOPTIVE FAMILY"/><br/>
                                    <p> Have you ever applied to this or any other agency for foster care or adoption?</p>
                                    <field name="adoption"/>
                                    <br/>
                                    <p>Are you, or any member of your household, now providing foster or pre-adoptive care?
                                        If yes, please list the name of person(s) providing foster/pre-adoptive care and identify the placement agency</p>
                                    <field name="provide_foster"/>
                                </page>
                                <page string="References">
                                    <h4>
                                        MEDICAL Reference(s)-One required for each household member
                                    </h4>
                                    <field name="medical_reference"/>
                                    <h4>
                                        EMPLOYER Reference(s)--One required for each Applicant
                                    </h4>
                                    <field name="employer_reference"/>
                                    <h4>
                                        PERSONAL References-5 required for family; can be from clergy, relative, friend, or other.
                                        Please include: name, relationship, address and phone number.
                                    </h4>
                                    <field name="personal_reference"/>
                                </page>

                            </notebook>
                        </page>
                        <page name="partner" string="Partner/Spouse">
                            <field name="patner"/>
                        </page>
                        <page name="family_members" string="Family/Other Members">
                            <h2>Family Members</h2>
                            <p>
                                Please provide the following information for ALL additional family members including children
                                and any other individuals living in your home

                            </p>
                            <field name="family_members"/>
                            <h2>Other Living Members</h2>
                            <p>
                                Please provide the following information for other individuals age 14 or older who spend substantial time at the home,
                                especially those who stay overnight or provide child care in the home
                            </p>
                            <field name="other_living_members"/>
                            <h2>
                                Family Based Child Care
                            </h2>
                            <p>
                                Is someone providing family-based childcare in the home?
                            </p>
                            <field name="family_care_agent"/>
                            <h2>
                                Disabled Individual Care
                            </h2>
                            <p>
                                Is someone caring for a disabled individual in the home?
                                If yes, please explain who is receiving care, why and who is providing care; identify the agency, if any, that is supporting the care being provided.
                            </p>
                            <field name="childcare_agent"/>
                            <h2>
                                Child Care Plan
                            </h2>
                            <p>
                                Please provide names of any person(s) other than yourself or your co-applicant who will provide day care
                                and supervision in your home for any child/children placed with you
                            </p>
                            <field name="childcare_person"/>
                            <p>
                                Describe any other child care or day care services you plan to use,
                                or will need, to assist you in providing care and supervision
                            </p>
                            <field name="childcare_service"/>
                        </page>
                        <page name="health_histoy" string="Health History">
                            <p>
                                Have you or any member of your household been treated for any
                                serious or chronic illness, drug or alcohol abuse? If yes, please identify
                            </p>
                            <field name="treated_individual"/>
                            <br/>
                            <p>
                                Do you or any member of your household have any other current medical problems or conditions that Dare should be aware of?
                                If yes, please identify
                            </p>
                            <field name="current_medical_problem"/>
                        </page>
                        <page name="driver_information" string="Driver Information">
                            <p>
                                Only licensed, insured drivers are able to transport foster children in Dare's care. Please list all household members, including applicant and spouse or partner,
                                with a valid driver's license and insurance
                            </p>
                            <field name="drivers"/>
                        </page>
                        <page string="Terms and Conditions">
                            <p>
                                I hereby apply to be a foster parent. I agree to participate in the HopeWell approved prelicensing training and parenting group for preparation and assessment that is required for the type of license I am seeking. I further agree to release any information necessary for this application/evaluation and to allow an inspection of my home. I understand that DCF will obtain references, make inquiries regarding any child abuse or criminal record, and that any falsification or withholding of information on this application may be grounds for my denial as a foster or adoptive parent. I agree that Hope Well/DCF may make collateral contacts with any individuals named in this application, as well as other individuals regarded by DCF as useful to evaluation of this application. I understand it is my obligation to report any change in circumstances regarding housing, health, household membership (including all individuals who spend substantial time - especially overnights - in my home), pets/animals and/or other background information provided in this application. I also understand that, upon licensing as a foster or adoptive parent, I become a "mandated reporter" and will be required to report suspected child abuse and neglect.

                            </p>
                            <group>
                                <field name="applicant_sign" widget="signature"/>
                                <field name="partner_sign" widget="signature"/>
                            </group>
                        </page>
                        <page string="CORI Form">
                            <h3>CORI</h3>
                            <p>
                                The Department of Children and Families will conduct a search of your Criminal and Child Welfare records to determine if you, or any members of your household or frequent visitors, 14 and older, have a history of previous/present involvement with DCF or criminal conduct that would make your home ineligible for the placement of children. DCF will also conduct a Sexual Offender Registry Information (SORT) check at the same time. If you have lived in another state you are requested to provide comparable information from other authority's court and child welfare systems
                            </p>
                            <field name="cori_form"/>
                        </page>
                    </notebook>
                    <link href="/foster_base/static/resource_form.css" rel="stylesheet"/>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="foster_applicant_window">
            <field name="name">Family Resources</field>
            <field name="res_model">foster.applicants</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem
                id="foster_management_menu_root"
                name="HopeVUE"
                sequence="-2"
                web_icon="foster_base,static/family_icon.png"
                action="foster_applicant_window"
        />
        <menuitem
                id="foster_management_resource"
                parent="foster_management_menu_root"
                name="Family Resource"
                sequence="1"
                action="foster_applicant_window"
        />
        <menuitem
                id="foster_management_resource_agreement"
                parent="foster_management_resource"
                name="Family Resource Agreement"
                sequence="1"
                action="foster_applicant_window"
        />

        <!--CORI Form-->

        <record model="ir.ui.view" id="cori_tree">
            <field name="name">Cori form</field>
            <field name="model">cori.form</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cori_applicant"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="cori_form">
            <field name="name">Cori form</field>
            <field name="model">cori.form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="cori_applicant"/>
                        <field name="cori_partner"/>
                        <field name="house_hold_member"/>
                        <field name="other_member"/>
                        <field name="cori_last_name"/>
                        <field name="cori_first_name"/>
                        <field name="cori_middle_name"/>
                        <field name="corimaiden_name"/>
                        <field name="cori_dob"/>
                        <field name="race"/>
                        <field name="cori_ss_num"/>
                        <field name="ethnicity"/>
                        <field name="cori_address"/>
                        <field name="cori_city"/>
                        <field name="cori_state"/>
                        <field name="cori_zip" class="zip masked_input"/>
                        <field name="other_state"/>
                        <field name="resided_date"/>
                        <field name="phone_num" class="phone masked_input"/>
                        <field name="cori_sign" widget="signature"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>