<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="notification_types_tree" model="ir.ui.view">
            <field name="name">Notification Types</field>
            <field name="model">notification.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="content" />
                    <field name="client_route" />
                </tree>
            </field>
        </record>

        <record id="notifications_tree" model="ir.ui.view">
            <field name="name">Notifications</field>
            <field name="model">notification</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="notification_type_id" />
                    <field name="res_id" />
                    <field name="parent_id" />
                </tree>
            </field>
        </record>

        <record id="notification_counters_tree" model="ir.ui.view">
            <field name="name">Notification Counters</field>
            <field name="model">notification.counter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="counter" />
                    <field name="user_id" />
                    <field name="notification_id" />
                </tree>
            </field>
        </record>

        <record id="messages_tree" model="ir.ui.view">
            <field name="name">Message Tree</field>
            <field name="model">odoochat.message</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="content" />
                    <field name="sender" />
                    <field name="to" />
                </tree>
            </field>
        </record>

        <record id="comments_tree" model="ir.ui.view">
            <field name="name">Comments Tree</field>
            <field name="model">mail.message</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="model" />
                    <field name="res_id" />
                    <field name="body" />
                </tree>
            </field>
        </record>

        <record id="action_notification_type" model="ir.actions.act_window">
            <field name="name">Notification Types</field>
            <field name="res_model">notification.type</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="action_notification" model="ir.actions.act_window">
            <field name="name">Notifications</field>
            <field name="res_model">notification</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="action_notification_counter" model="ir.actions.act_window">
            <field name="name">Notification Counter</field>
            <field name="res_model">notification.counter</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="action_comment" model="ir.actions.act_window">
            <field name="name">Comments</field>
            <field name="res_model">mail.message</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <record id="action_message" model="ir.actions.act_window">
            <field name="name">Messages</field>
            <field name="res_model">odoochat.message</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem
            name="Notifications" id="menu_notification"
            action="action_notification"
        />
        <menuitem
            name="Comments" id="menu_notification_type"
            parent="menu_notification"
            action="action_message"
        />
        <menuitem
            name="Messages" id="menu_message"
            parent="menu_notification"
            action="action_comment"
        />
        <menuitem
            name="Notification Types" id="menu_notification_type"
            parent="menu_notification"
            action="action_notification_type"
        />
        <menuitem
            name="Notification Records" id="menu_notification_record"
            parent="menu_notification"
            action="action_notification"
        />
        <menuitem
            name="Notification Counter" id="menu_notification_counter"
            parent="menu_notification"
            action="action_notification_counter"
        />
    </data>
</odoo>