<odoo>
    <data>

        <record id="messages_tree" model="ir.ui.view">
            <field name="name">Message Tree</field>
            <field name="model">odoochat.message</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="create_date"/>
                    <field name="content"/>
                    <field name="sender"/>
                    <field name="to"/>
                </tree>
            </field>
        </record>
        
        <record id="view_message_form" model="ir.ui.view">
            <field name="name">odoochat.messages.form</field>
            <field name="model">dn_base.empty</field>
            <field name="sequence" eval="2"/>
            <field name="arch" type="xml">
                <form>
                    <style>
                        .o_control_panel{
                            display: none !important;
                        }
                    </style>
                    <app-messenger></app-messenger>
                    <div id="messenger_libs">
                        <script src="/odoochat/static/js/message.js"></script>
                    </div>                    
                </form>
            </field>
        </record>


        <record id="action_messenger" model="ir.actions.act_window">
            <field name="name">Messenger</field>
            <field name="res_model">dn_base.empty</field>
            <field name="view_id" ref="view_message_form" />
            <field name="res_id" ref="record_empty_row1"/>
        </record>
    </data>
</odoo>