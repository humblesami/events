<odoo>
    <data>

                <record id="attendance_daily_wizard_view" model="ir.ui.view">
            <field name="name">Request for attendance Review</field>
            <field name="model">attendance.wizard</field>
            <field name="arch" type="xml">
            <form edit="false">
                <group col="2" modifiers="{}">
                    <field name="message" string="Request Message" modifiers="{'readonly':false}"/>
                    <newline modifiers="{}"/>
                    <field name="work_date" readonly="1"/>
                    <newline modifiers="{}"/>
                    <field name="employee_id" readonly="1"/>
                    <field name = "create_date" readonly="1"/>
                    <field name = "create_uid" readonly="1"/>
                </group>
                    <footer>
                        <button string="Send Request" name="send_request" type="object" class="btn-primary oe_edit_only" />
                        <button string="Cancel" class="btn-default oe_edit_only" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_attendance_wizard" multi="True"
            name="Request Review" res_model="attendance.wizard" src_model="attendance.wizard"
            view_mode="form" target="new" view_type="form" />

 <record id="request_review_template" model="mail.template">
          <field name="name">Request Review Template </field>
          <field name="email_from">${ctx['emailFrom']|safe}</field>
          <field name="subject">Attendance Review</field>
          <field name="email_to">${ctx['emailTo']|safe}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="dn_attendance.model_attendance_wizard"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
	      <p>Dear Sir,<br/><br/>
	      Kindly have a look at this attendance
	      ${ctx['message']}
	      <a href="${'attendance_url' in ctx and ctx['attendance_url'] or ''}" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">Click Here</a><br/>
              Regards,<br/>
              ${ctx['name']}
	    ]]>
	  </field>
       </record>


    </data>
</odoo>