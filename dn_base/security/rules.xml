<odoo>
    <data>

        <record id="dn_base_comments_rule" model="ir.rule">
            <field name="name">Read All comments and Own Notes</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">['|',('subtype_id.name','!=','Note'),"&amp;",('subtype_id.name','=','Note'),('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
        </record>

        <!--Above rule dnt give access if subtype_id is False-->
        <record id="dn_base_message_update_rule_admin" model="ir.rule">
            <field name="name">Message rule admin</field>
            <field name="model_id" ref="mail.model_mail_message"/>
            <field name="domain_force">[('message_type','!=','comment')] </field>
            <field name="groups" eval="[(4, ref('dn_base.group_dn_app_manager'),(4, ref('dn_base.group_dn_app_manager'))]"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
        </record>

