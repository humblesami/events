<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_batch_tree" model="ir.ui.view">
            <field name="name">op.batch.tree</field>
            <field name="model">op.batch</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Batch">
                    <field name="name" />
                    <field name="code" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="course_id" />
                    <field name="branch_id" />
                </tree>
            </field>
        </record>
        <record id="view_op_batch_form" model="ir.ui.view">
            <field name="name">op.batch.form</field>
            <field name="model">op.batch</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Batch">
                    <style>
                        div[name="faculty_ids"] .o_data_cell{
                        white-space: pre
                        }
                    </style>
                    <header>

                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <group col="4" name="main">

                            <field name="code"/>

                            <field name="branch_id"/>
                            <field name="course_id"/>
                            <field name="section_id"/>
                            <field name="no_of_students"/>
                            <field name="max_students"/>

                        </group>
                        <group string="Terms">

                            <field name="term_ids" required="1" nolabel="1"/>
                        </group>
                        <h3 style="color:#00a09d">Required hours: <field class="badge" name="total_instr_hrs" widget="float_time"/></h3>
                        <group col="4">
                            <field name="start" widget="float_time" required="1" class="dn_time_picker"/>
                            <field name="end" widget="float_time" required="1" class="dn_time_picker"/>
                            <field name="days" widget="many2many_tags"/>
                            <field name="faculty_id" context="{'filter_teachers': term_ids,'course': course_id,'class_id': active_id,'days': days,'start': start,'end': end,'total_instr_hrs': total_instr_hrs}"/>

                        </group>

                        <group>
                            <field name="funded_by"/>
                            <field name="prephrs_week" widget="float_time" class="dn_time_picker"/>
                            <field name="job_search_hrs" widget="float_time" class="dn_time_picker"/>
                            <field name="dev_hrs" widget="float_time" class="dn_time_picker"/>

                        </group>

                        <notebook>
                            <!--<page name="terms" string="Terms">-->
                            <!--    <field name="term_ids"/>-->
                            <!--</page>-->

                            <page name="admission" string="Admission details">
                                <group>
                                    <field name="start_date" required="1"/>
                                    <field name="end_date" required="1"/>
                                    <field name="product_id"/>

                                </group>
                            </page>
                            <page name="admission" string="Total hours">
                                <group col="4">
                                    <field name="classhrs_week" widget="float_time"/>
                                    <field name="weekly_fte"/>
                                    <field name="weeks"/>
                                    <field name="cycles"/>
                                    <field name="total_hrs" widget="float_time"/>
                                    <field name="total_instr_hrs" widget="float_time"/>
                                    <field name="total_prep_hrs" widget="float_time"/>
                                    <!--<field name="total_dev_hrs" widget="float_time"/>-->
                                    <field name="fte_hrs_employed"/>
                                    <field name="fte"/>
                                </group>
                            </page>
                        </notebook>


                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_op_batch_search" model="ir.ui.view">
            <field name="name">op.batch.search</field>
            <field name="model">op.batch</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Batch">
                    <field name="code" />
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="course_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Start Date" domain="[]"
                                context="{'group_by':'start_date'}" />
                        <filter string="End Date" domain="[]" context="{'group_by':'end_date'}" />
                        <filter string="Course" domain="[]" context="{'group_by':'course_id'}" />
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_op_batch_view">
            <field name="name">Classes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.batch</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_op_batch_search" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_batch_view_form">
            <field name="act_window_id" ref="act_open_op_batch_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_batch_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_batch_view_tree">
            <field name="act_window_id" ref="act_open_op_batch_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_batch_tree" />
        </record>









        <record id="view_op_section_tree" model="ir.ui.view">
            <field name="name">op.section.tree</field>
            <field name="model">op.section</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Batch">
                    <field name="name" />
                    <field name="course_id" />
                    <field name="time" />
                </tree>
            </field>
        </record>
        <record id="view_op_section_form" model="ir.ui.view">
            <field name="name">op.section.form</field>
            <field name="model">op.section</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Batch">
                    <group>
                        <field name="name" />
                        <field name="course_id" />
                        <field name="time" />
                    </group>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_section_view">
            <field name="name">Sections</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.section</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_section_view_form">
            <field name="act_window_id" ref="act_open_section_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_section_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_section_view_tree">
            <field name="act_window_id" ref="act_open_section_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_section_tree" />
        </record>



    </data>
</odoo>
